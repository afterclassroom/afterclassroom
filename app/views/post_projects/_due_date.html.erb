<div class="col195 dueDate">
  <div class="col195in">
    <h1 class="col195Title">Due date</h1>
    <div class="col195Cont">
      <%
      projects_due_date = PostProject.due_date(@school).with_limit
    %>
      <% if projects_due_date.size > 0 %>
        <%
        projects_due_date.each do |pr|
        %>
          <div class="dueDItem">
            <div class="dueDTitle"><%= link_to truncate_words(pr.post.title, 4), post_project_path(pr.post) %></div>
            <div class="dueDTime"><%= pr.due_date.strftime("%B %d, %Y")%></div>
          </div>
        <%
        end
      %>
        <% if projects_due_date.size > LIMIT - 1 %>
          <div class="dueDbutton"><%= link_to "View more Due Date", due_date_post_projects_path %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
