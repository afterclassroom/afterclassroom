<label>Post category*</label>
<div class="user_ri">
  <%= text_field_tag 'post_category_name', "#{@post_category_name}", :class => "required tb_arrow", :readonly => "readonly" %>
  <div id="select_post_category" class="menu_select" style="display:none">
    <ul>
    <% for post_category in post_categories %>
      <li>
        <% if post_category.name == post_category_name %>
          <%= radio_button "post", "post_category_id", post_category.id, :onClick => "postDispatch(#{post_category.id})", :checked => true %>
        <% else %>
          <%= radio_button "post", "post_category_id", post_category.id, :onClick => "postDispatch(#{post_category.id})" %>
        <% end %>
        <label onClick="" for="post_post_category_id_<%= post_category.id %>"><%= post_category.name %></label>
      </li>
    <% end %>
  </ul>
  </div>
</div>

<script language="javascript">
  function postDispatch(id){
    document.location = "/posts/post_dispatch?post_category_id=" + id;
  }
  new Tip('post_category_name', $('select_post_category'), {
    width: 'auto',
    title: 'Select Category',
    showOn: 'click',
    hideOthers: true,
    hideOn: { element: 'closeButton', event: 'click'},
    hook: { target: 'bottomLeft', tip: 'topLeft' },
    offset: {x:0, y:0} });
</script>