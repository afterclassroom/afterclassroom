<table>
  <tr>
    <th>Post category</th>
    <th>Title</th>
    <th>Description</th>
    <th>Department</th>
    <th>Email</th>
    <th>Telephone</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%=h post.post_category.name %></td>
    <td><%=h post.title %></td>
    <td><%=h post.description %></td>
    <td><%=h post.department.name %></td>
    <td><%=h post.email %></td>
    <td><%=h post.telephone %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= will_paginate @cities, :class => "digg_pagination" %>