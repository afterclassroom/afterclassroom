<ul class="front-title">
  <li>Projects of a day</li>
  <ul class="sub-post-title"><!-- begin listing -->
    <% for project in projects %>
      <li><%= link_to "#{project.title}", "/posts?search[type_name]=Projects" %> from <%= project.user.full_name %> - <%= project.school.name %>. <br /><span class="post-datetime"><%= project.created_at.strftime("%B %d, %Y") %></span></li>
    <% end %>
  </ul><!-- end listing -->

  <li class="more-link"><%= link_to "More...", "/posts?search[type_name]=Projects" %></li>
</ul>