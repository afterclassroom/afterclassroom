<%= fields_for @post do |post| %>
<%= display_flash_messages_with_raw %>
<div class="postReq">
    *(asterisk) is required.
</div>
<div class="postItemDep">
    <div class="postTit">
        Type
    </div>
    <div class="postDep">
        <%= f.text_field :event_type_id %>
    </div>
</div>
<%= render :partial => "/shared/form_post/title", :locals => {:post => post} %>
<%= render :partial => "/shared/form_post/description", :locals => {:post => post} %>
<%= render :partial => "/shared/form_post/select_school" %>
<%= render :partial => "/shared/form_post/email" %>
<div class="postItem">
    <div class="postTit">
        Start time
    </div>
    <div class="postInp">
         <%= text_field_tag :start_time, @post_event.start_time != nil ? @post_event.start_time.strftime("%m/%d/%Y %I:%M %p") : "", :style => "width:150px" %>
    </div>
</div>
<div class="postItem">
    <div class="postTit">
        End time
    </div>
    <div class="postInp">
        <%= text_field_tag :end_time, @post_event.end_time != nil ? @post_event.end_time.strftime("%m/%d/%Y %I:%M %p") : "", :style => "width:150px" %>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#start_time").datetimepicker({
            ampm: true
        });
        $("#end_time").datetimepicker({
            ampm: true
        });
    });
</script>
<div class="postItem">
    <div class="postTit">
        Phone
    </div>
    <div class="postInp">
        <%= f.text_field :phone, :style => "width:208px" %>
    </div>
</div>
<div class="postItem">
    <div class="postTit">
        Address
    </div>
    <div class="postInp">
        <%= f.text_field :address, :style => "width:208px" %>
    </div>
</div>
<%= render :partial => "/shared/auto_address", :locals => {:id_addres_field => "post_event_address" } %>
<%= render :partial => "/shared/form_post/file", :locals => {:post => post, :only_img => true} %>
<%= render :partial => "/shared/form_post/select_tag" %>
<% end %>
<ul id="event_type_menu" class="mcdropdown_menu">
    <% EventType.find(:all).each do |t| %>
    <li rel_event_type="<%= t.id %>">
        <%= t.name %>
    </li>
    <% end %>
</ul>
<script type="text/javascript">
    $("#post_event_event_type_id").mcDropdown("#event_type_menu", {
        width: 350,
        valueAttr: "rel_event_type"
    });
</script>
