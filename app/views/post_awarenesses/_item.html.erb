<div class="assItem">
    <div class="assItemL">
        <div class="assPic">
            <%= show_image_user_post(post.user) %>
        </div>
        <div class="assContT" style="width:250px">
            <h2 class="titleH2"><%= link_to title, post_awareness_path(post.post_awareness) %></h2>
            <div class="assCate"><span>From:</span><%= link_to post.school.name, :controller => "post_awarenesses", :action => "index", :from_school => post.school %></div>
            <div class="assDes">
                <div class="assImg">
                    <div>
                        <%= link_to image_post_thumb(controller_name, post), post.post_awareness %>
                    </div>
                </div>
                <%= truncate_html(description, :length => 170, :omission => '...') %>
            </div>
        </div>
    </div>
    <!--info-link-box-->
    <div class="asslinkdown" style="margin-top:-8px;">
        <div id="support_action_<%= post.id%>">
            <div class="support">
                <%= show_support(post) %>
            </div>
            <div class="support">
                <%= show_notsupport(post) %>
            </div>
        </div>
        <div class="mySco">
            <%= link_to "View results", "#{url_for(:controller => "ajax_not_login", :action => "view_results")}?post_awareness_id=#{post.post_awareness.id}&height=325&width=550", :class => "thickbox", :title => "View results" %>
        </div>
    </div>
    <!--info-link-box-->
    <div class="assItemB">
        <div class="assInfT">
            <div class="assInfT">
                <div class="assInfL">
                    <div>
                        <span>Posted by:</span>
                        <%= show_user_post(post.user) %>
                    </div>
                </div>
            </div>
            <div class="assInfB">
							<%= render :partial => "rating_action", :locals => {:post => post, :controller_name => controller.controller_name}%>
                <div class="vie">
                    <%= "View (#{post.count_view})" %>
                </div>
                <div class="fav" id="item_favorite_<%= post.id %>">
                    <%= show_favorite("Post", post) %>
                </div>
                <div class="com">
                    <%= show_comment_button(post.id, post.comments.size) %>
                </div>
            </div>
        </div>
    </div>
    <!--Comments-->
    <%= render :partial => "shared/post_comments/show_list_comments", :locals => {:post => post} %>
    <!--Comments-->
</div>
