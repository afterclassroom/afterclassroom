<div class="assItem">
  <div class="assItemL">
    <div class="assImg"><div><%= link_to image_post_thumb(controller.controller_name, post), post %></div></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to title, post_awareness_path(post) %></h2>
      <div class="assCate"><span>From:</span><%= link_to post.school.name, :controller => "post_awarenesses", :action => "index", :from_school => post.school %></div>
    </div>
    <div class="assDes"><%= truncate_words(description) %></div>
  </div>
  <!--info-link-box-->
  <div class="asslinkdown">
    <div id="support_action">
      <div class="support"><%= show_support(post) %></div>
      <div class="support"><%= show_notsupport(post) %></div>
    </div>
    <div class="mySco"><%= link_to "View results", "#{view_results_post_awarenesses_path}?post_awareness_id=#{post.post_awareness.id}&height=325&width=550", :class => "thickbox", :title => "View results" %></div>
  </div>
  <!--info-link-box-->
  <div class="assItemB">
    <div class="assPic"><%= show_image_user_post(post.user) %></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= show_user_post(post.user) %></div>
          <div><span>Comments:</span><%= "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}" %></div>
        </div>
        <div class="assInfR"><%= link_to "more", post_awareness_path(post) %></div>
      </div>
      <div class="assInfB">
        <div id="rate_<%= post.id %>">
          <%
          check = PostAwareness.find_rated_by(current_user).include?(post.post_awareness) if logged_in?
          check ||= false
        %>
          <div class="qashdU">
            <%= show_rating(post.id, post.post_awareness.total_good, controller.controller_name, check, 1) %>
          </div>
          <div class="qashdD">
            <%= show_rating(post.id, post.post_awareness.total_bad, controller.controller_name, check, 0) %>
          </div>
        </div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="item_favorite_<%= post.id %>"><%= show_favorite("Post", post) %></div>
        <div class="com"><%= link_to "Comments (#{post.comments.size})", "#" %></div>
      </div>
    </div>
  </div>
</div>
