<div class="AsDContBtm">
  <span class="btmComment"><a href="javascript:;" onclick="$('#form_comment').toggle('slow');">Comment</a></span>
  <% if !logged_in? or (logged_in? and current_user != post.user ) %><span class="btmMail"><%= show_email(post) %></span><% end %>
  <span class="btmShare"><%= addthis_bookmark_button { "<span>Share</span>" } %></span>
  <span class="btmMore"><%= link_to raw("<span>More like this</span>"), :controller => "post_awarenesses", :action => "index", :more_like_this_id => post %></span>
  <span class="btmAbuse"><%= link_to(raw("<span>Report Abuse</span>"), "#{report_abuse_posts_path}?reported_id=#{post.id}&reported_type=PostAwareness&height=320&width=490", :class => "thickbox", :title => "Report Abuse") %></span>
  <% if post.attach_file_name %>
    <span class="btmDown"><a href="javascript:downloadFile('<%= post.attach.url %>')" class="downarrow"><span>Download</span></a></span>
  <% end %>
</div>
