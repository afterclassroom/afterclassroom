<div class="AsDcomImg" style="padding: 5px;" id="usr_<%= usr.id %>">
  <div>
    <img src="<%= usr.avatar.url(:thumb) %>" class="vtip avatar_<%= usr.id %>" title="<%= usr.name %>"/>
  </div>
</div>

<script type="text/javascript">
function AddUser<%= usr.id %>(){
  $('#loading_user').show();
  $('#usr_lists').hide();
  $('#selected_users_area').hide();

  addusrAjax = $.ajax({
    url: '<%= add_usr_user_u_forums_path %>',
    type: 'GET',
    dataType: 'script',
    data: {
      usr_id: <%= usr.id %>
    },
    success: function(data){
      $('#loading_user').hide();
      $('#usr_lists').show();
      $('#selected_users_area').show();
    }
  });//end ajax
}

$(document).ready(function(){
  <% if session[:list_selected_usrs].include?(usr.id) == false %>
    $('#usr_<%= usr.id %>').click(function(){
      AddUser<%= usr.id %>();
    });
  <% end %>
});
</script>
