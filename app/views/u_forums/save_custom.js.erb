$(document).ready(function(){

  $('#wait_area').hide();
  $('#setting_area').show();
  <% if @share_to != nil %>
    $('#list_usrs').html('<%= escape_javascript ( raw(render :partial => "friend_show")) %>');  
    $('#list_usrs').show();
  <% else %>
    $('#list_usrs').html('');
  <% end %>
  $('#show_paging').html('<%= escape_javascript ( raw(render :partial => "paging_show")) %>');  
  $('#show_paging').show();
  $('#list_usrs_wait').hide();


  //BEGIN toggle the add new member area
  $('#invite_btn').unbind();
  $('#invite_btn').click(function(){
    $('#area_more_friend').toggle();
  });
  //END toggle the add new member area
  $('#to_lounge').click(function(){
    PostLounge();
  });
});
