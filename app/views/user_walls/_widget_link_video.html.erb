<div class="wrapTitle">Video link youtube:</div>
<div style="float:left; margin-right:3px"><input type="text" value="http://" width="300px" name="link_video" id="link_video" class="focus_text_field"/></div>
<div class="submit" style="float:left"><%= link_to "Attach", "javascript:;", :id => "link_video_attach" %></div>
<script>
  var path = '/user_walls/attach_video';
  $(document).ready(function() {
    $("#link_video_attach").click(function() {
        var stri_content = $('#link_video').val();
        $("#link_video").focus();
        if (stri_content == "http://") {
          return false;      
        }
        ShowFeaturedOverlay();
        $("#link_video").blur();
        $.ajax({
          url: path,
          type: 'GET',
          cache: false,
          dataType: 'html',
          data: ({
            link : $("#link_video").val()
          }),
          success: function(data){
            $('#attach').html(data);
            $('#overlay').hide();
          }
        });
      });
    });
</script>
