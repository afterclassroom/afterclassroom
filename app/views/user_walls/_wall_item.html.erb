<div class="AfterItem" id="wall_<%= wall.id %>">
  <div class="assPic"><%= link_to raw("<div>#{image_tag(wall.user_post.avatar.url(:thumb))}</div>"), {:controller => "profile", :action => "show_profile", :id => wall.user_post.id} %></div>
  <div class="AfterInfo">
    <div class="AfterCl"><%= link_to wall.user_post.full_name, {:controller => "profile", :action => "show_profile", :id => wall.user_post.id} %> - <%= wall.content %></div>
    <!--Attach-->
    <%= show_attach(wall) if wall.has_attach %>
    <!--Attach-->
    <div class="assInfB">
      <div class="time"><%= distance_of_time_in_words_to_now(wall.created_at, false) + " ago." %></div>
      <div class="share"><a href="#">Share</a></div>
      <div id="rate_<%= wall.id %>">
        <%
        check = UserWall.find_rated_by(current_user).include?(wall) if logged_in?
        check ||= false
      %>
        <div class="qashdU">
          <%= show_rating(wall.id, wall.total_good, "user_walls", check, 1) %>
        </div>
        <div class="qashdD">
          <%= show_rating(wall.id, wall.total_bad, "user_walls", check, 0) %>
        </div>
      </div>
      <div class="com"><a href="javascript:;" onclick="showCommentForm('<%= wall.id %>');">Comments (<%= wall.comments.size %>)</a></div>
    </div>
    <!--Comments-->
    <% if wall.comments.size > 0 %>
      <div id="wall_list_comment_<%= wall.id %>">
        <% if wall.comments.size > 2 %>
          <div class="proList">
            <div class="writeCom"><%= link_to "View all comments", :url => {:controller => "user_walls", :action => "view_all_comments", :wall_id => wall.id}, :update => "wall_list_comment_#{wall.id}", :remote => true %></div>
          </div>
        <% end %>
        <% wall.comments.find(:all, :limit => 2, :order => "created_at DESC").reverse.each do |cm| %>
          <%= render :partial => "user_walls/wall_comment_item", :locals => {:wall => wall, :comment => cm} %>
        <% end %>
        <%= render :partial => "user_walls/wall_comment", :locals => {:wall => wall} %>
      </div>
    <% end %>
    <%= render :partial => "user_walls/wall_comment_form", :locals => {:wall => wall} %>
    <!--Comments-->
  </div>
</div>
