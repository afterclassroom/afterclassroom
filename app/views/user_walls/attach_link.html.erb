<div style="min-height:80px">
  <div class="AfterImg"><div>
      <ul style="position: relative; left: 0px; width: 1020px;" id="myCarousel" class="myCarousel">
        <% @arr_img.each do |img| %>
          <li><%= image_tag img, :width => "92px", :height => "68px" %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="AfterTitle"><%= link_to @user_wall_link.title, @user_wall_link.link, :target => "_blank" %></div>
  <div class="AfterDes"><%= @user_wall_link.sub_content %></div>
</div>
<% fields_for @user_wall_link do |p| %>
  <%= p.hidden_field :link %>
  <%= p.hidden_field :image_link %>
  <%= p.hidden_field :title %>
  <%= p.hidden_field :sub_content %>
<% end %>

<script type="text/javascript">
  jQuery(document).ready(function () {
    
    var carrousel = jQuery("#myCarousel").carrousel({
      direction	: 'left',
      easing : 'easeOutBounce',
      speed : 500,
      dispTimeout : 1000,
      dispNumber : 1,
      auto : false,
      callbacks	: [giveCurrent],
      api : true
    });

    function giveCurrent() {
      alert(carrousel.getCurrent());
    }

    jQuery('#next').click(function () {
      carrousel.next();
      return false;
    });
    jQuery('#prev').click(function () {
      carrousel.prev();
      return false;
    });
  });
</script>