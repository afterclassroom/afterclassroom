<div class="wrapTitle">Link:</div>
<div style="float:left; margin-right:3px"><input type="text" value="http://" width="300px" name="link_link" id="link_link" class="focus_text_field"/></div>
<div class="submit" style="float:left"><%= link_to "Attach", "javascript:;", :id => "link_link_attach" %></div>
<script>
  var path = '/user_walls/attach_link';
  $(document).ready(function() {
    $("#link_link_attach").click(function() {
      var stri_content = $('#link_link').val();
      $("#link_link").focus();
      if (stri_content == "http://") {
        return false;      
      }
      ShowAttachLinkOverlay();
      $("#link_link").blur();
      $.ajax({
        url: path,
        type: 'GET',
        cache: false,
        dataType: 'html',
        data: ({
          link : $("#link_link").val()
        }),
        success: function(data){
          $('#attach').html(data);
          $('#overlayAttLink').hide();
        }
      });
    });
  });
</script>
