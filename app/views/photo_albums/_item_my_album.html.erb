<div class="photoItem">
  <div class="photoImg"><%= link_to get_first_photo(album), user_photo_album_url(current_user, album) %></div>
  <div class="photoInf" style="margin-top: -5px; margin-left: -4px"><%= check_box_tag "photo_album_id", album.id %><span style="position: absolute; margin-top: 4px;"><%= pluralize(album.photos.size, "photo") %></span></div>
  <div class="photoNamePho" style="margin-top: -6px;"><span><%= truncate_words(album.name, 5) %></span></div>
</div>