<div class="slsTopLT">
    Friends shared photos
</div>
<div class="slsTopLB friLeft">
    <div class="search" style="margin-top:-19px; margin-bottom:20px">
        <%= form_for :search_friend_photo, :url => friend_p_user_photos_path(current_user), :html => {:id => "friend_photos_search", :method => "GET", :onsubmit => "return false"} do %>
        <div id="btnF_submit" class="textS">
            <%= text_field_tag "search[name]", @search_name %>
        </div>
        <div class="btmS">
            <a id="btnSF_submit" href="javascript:;" onclick="searchFriendPhotos();"><img src="/images/iconSF.png"/></a>
        </div><% end %>
    </div>
</div>
<div class="photoRow">
    <% @photo_albums.each do |f_p| %>
    <%= render :partial => "item_friend_photo", :locals => {:photo_album => f_p} %>
    <% end %>
</div>
<div class="slsTopR">
    <!--Pagination-->
    <div class="assPage friend_photos">
        <span class="numPage"><%= page_entries_info @photo_albums %></span>
        <%= will_paginate @photo_albums %>
    </div>
    <!--Pagination-->
</div>
<script type="text/javascript">
    $("#btnSF_submit").click(function(){
      $('#btnF_submit').append('<%= show_ajax_loader("loader_id","display: block; position: absolute; float: right; height: 19px; margin-top: -19px; margin-left: -25px;") %>');
    });
    formatLinkForPaginationURLFriendPhoto();
</script>
