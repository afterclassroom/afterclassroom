<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => 'submenu' %>
<% end -%>

<div class="slStoryL">
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div class="slsShare">
          <div class="slsShareL">Photos</div>
          <div class="slsShareR">
            <%= render :partial => "menu" %>
          </div>
        </div>
        <%= display_flash_messages %>
        <div class="photoEx">
          <div class="stoExItem">
            <div class="stoExItemL">Photo album name</div>
            <div class="stoExItemR"><input type="text" name="Text2"/></div>
          </div>
          <div class="stoExItem">
            <div class="stoExItemL">Location</div>
            <div class="stoExItemR">
              <div class="phoExIn"><input type="text" name="Text2"/></div>
              <div class="phoExBtm"><a href="#">Browse</a></div>
              <div class="phoExMul">Multi-attachs (<a href="#">click here</a>)</div>
            </div>
          </div>
          <div class="stoExItem">
            <div class="stoExItemL">Description</div>
            <div class="stoExItemR"><textarea rows="2" cols="20" name="TextArea1"></textarea></div>
          </div>
          <div class="stoExBtm">
            <div class="stoExCre"><a href="#">Create photo album</a></div>
            <div class="stoExCan"><a href="#">Cancel</a></div>
          </div>
        </div>
        <div id="friend_photos_list">
          <div class="slsTop">
            <div class="slsTopL">
              <div class="slsTopLT">Friends shared photos</div>
            </div>
            <div class="slsTopR">
              <!--Pagination-->
              <div class="assPage friend_photos">
                <span class="numPage"><%= page_entries_info @friend_photos %></span>
                <%= will_paginate @friend_photos %>
              </div>
              <!--Pagination-->
            </div>
          </div>
          <div class="photoRow">
            <% @friend_photos.each do |f_p| %>
              <%= render :partial => "item_friend_photo", :locals => {:photo => f_p}  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div id="my_photos_list">
          <div class="slsTop">
            <div class="slsTopL">
              <div class="slsTopLT">Your photos</div>
            </div>
            <div class="slsTopR">
              <!--Pagination-->
              <div class="assPage friend_photos">
                <span class="numPage"><%= page_entries_info @ny_photos %></span>
                <%= will_paginate @my_photos %>
              </div>
              <!--Pagination-->
            </div>
          </div>
          <div class="photoRow">
            <% @my_photos.each do |m_p| %>
              <%= render :partial => "item_my_photo", :locals => {:photo => m_p}  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="contMainR">
  <!--Most Viewed-->
  <%= render :partial => "most_viewed" %>
  <!--Most Viewed-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>

<script type="text/javascript" >
  function submit(){
    $("#form_new").submit();
  }
  $().ready(function() {
    $("#form_new").validate({
      errorLabelContainer: $("#form_new div.stoError")
    });
  });

  formatLinkForPaginationURLFriendPhoto();
  formatLinkForPaginationURLMyPhoto();
</script>