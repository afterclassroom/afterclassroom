<% content_for :menu_top_student_lounge do -%>
<%= render :partial => '/shared/submenu' %>
<% end -%>
<div class="slStoryL">
    <div class="contDetL">
        <div class="contDetLin">
            <div class="inboxLeft">
                <div class="slsShare">
                    <div class="slsShareL">
                        Post your photo
                    </div>
                </div>
                <%= display_flash_messages_with_raw %>
                <div class="postCont">
                    <%= form_for @photo, :url => user_photos_path(current_user), :html => {:id => "form", :name => "form", :multipart => true } do |f| %>
                    <div class="postItem">
                        <div class="postTit">
                            Photo album*
                        </div>
                        <div class="postInp">
                            <% if @photo_albums.size > 0 %>
                            <%= f.select :photo_album_id, @photo_albums.collect {|p| [p.name, p.id]}, {}, {:style => "width:360px", :class => '{validate:{required:true}}'} %>
                            <% end %>
                        </div>
                    </div>
                    <div class="postTitt">
                        Location
                    </div>
                    <div class="postItemA">
                        <div id="divinputfile" style="margin-left:120px">
                            <div class="postItemC">
                                <%= f.file_field :photo_attach, :onchange => "$('#fakefilepc').val(this.value);", :class => "filepc required" %>
                            </div>
                            <div class="postUpfile">
                                <div id="fakeinputfile">
                                    <input name="fakefilepc" type="text" id="fakefilepc" style="margin-top:-3px;">
                                </div>
                            </div>
                        </div>
                    </div>
					<div class="postItem">
                        <div class="postTit">
                            Title
                        </div>
                        <div class="postInp">
                            <%= f.text_field :title, :style => "width:360px" %>
                        </div>
                    </div>
                    <div class="postItem">
                        <div class="postTit">
                            Description
                        </div>
                        <div class="postInp">
                            <%= f.text_area :description %>
                        </div>
                    </div>
					<div class="postItem">
                        <div class="postTit">
                            Tag line
                        </div>
                        <div class="postInp">
                            <%= text_field_tag 'tag_list', "", :style => "width:360px" %>
                        </div>
                    </div>
                    <div class="stoExBtm">
                        <div class="stoExCre">
                            <a href="javascript:;" onclick="submit();">Add photo</a>
                        </div>
                        <div class="stoExCan">
                            <%= link_to "Cancel", user_photos_path(current_user) %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contMainR">
    <!--Most Viewed-->
    <%= render :partial => "most_viewed" %>
    <!--Most Viewed-->
    <!--Ads-->
    <%= render :partial => "ads/show_vertical_ads" %>
    <!--Ads-->
</div>
<script type="text/javascript">
    function submit(){
        $("#form").submit();
    }
    
    $().ready(function(){
        $("#form").validate();
    });
</script>
