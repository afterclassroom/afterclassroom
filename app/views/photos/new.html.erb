<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => '/shared/submenu' %>
<% end -%>

<div class="slStoryL">
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div class="slsShare">
          <div class="slsShareL">Post your photo</div>
        </div>
        <%= display_flash_messages %>
        <div id="take_a_picture" >
          <% form_for @photo, :url => user_photos_path(current_user), :html => {:id => "form", :name => "form", :multipart => true } do |f| %>
          <div class="stoError"></div>
          <div class="photoEx">
              <div class="stoExItem">
                <div class="stoExItemL">Photo album*</div>
                <div class="stoExItemR" id="select_photo_album">
                  <% if @photo_albums.size > 0 %>
                    <%= f.select :photo_album_id, @photo_albums.collect {|p| [p.name, p.id]}, {}, {:style => "width:250px", :class => "required"} %>
                  <% end %>
                </div>
              </div>
              <div class="stoExItem">
                <div class="stoExItemL">Location</div>
                <div class="stoExItemR">
                  <div id="divinputfile" style="width:254px">
                    <%= f.file_field :photo_attach, :onchange => "$('#fakefilepc').val(this.value);", :class => "filepc required" %>
                    <div id="fakeinputfile" style="margin-top:-30px;"><input type="text" id="fakefilepc" name="fakefilepc" style="width:176px"/></div>
                  </div>
                </div>
              </div>
              <div class="stoExItem">
                <div class="stoExItemL">Title</div>
                <div class="stoExItemR"><%= f.text_field :title %></div>
              </div>
              <div class="stoExItem">
                <div class="stoExItemL">Description</div>
                <div class="stoExItemR"><%= f.text_area :description %></div>
              </div>
              <div class="stoExItem">
                <div class="stoExItemL">Tag line</div>
                <div class="stoExItemR"><%= text_field_tag 'tag_list', "" %></div>
              </div>
              <div class="stoExBtm">
                <div class="stoExCre"><a href="javascript:;" onclick="submit();">Add picture</a></div>
                <div class="stoExCan"><%= link_to "Cancel", user_photos_path(current_user) %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="contMainR">
  <!--Most Viewed-->
  <%= render :partial => "most_viewed" %>
  <!--Most Viewed-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>

<script type="text/javascript" >
  function submit(){
    $("#form").submit();
  }
  $().ready(function() {
    $("#form").validate();
  });
</script>
