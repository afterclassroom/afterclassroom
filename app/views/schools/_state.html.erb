<% if states %>
  <% for state in states %>
    <li>
      <%= radio_button "city", "state_id", state.id, :onChange => "loadCity(this.value)", :onClick => "getState('#{state.name}')" %>
      <label onClick="getState(this.innerHTML)" for="city_state_id_<%= state.id %>"><%= state.name %></label>
    </li>
  <% end %>
<% end %>