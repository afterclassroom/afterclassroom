<% content_for :menu_top_student_lounge do -%>
<%= render :partial => '/shared/submenu' %>
<% end -%>
<div class="slStoryL">
    <div class="contDetL">
        <div class="contDetLin">
            <div class="inboxLeft">
                <div class="slsShare">
                    <div class="slsShareL">
                        Share a Story
                    </div>
                </div>
                <%= display_flash_messages_with_raw %>
                <div class="stoEx" id="story_form_update">
                    <%= form_for [current_user, @story], :html => {:id => "form"} do |f| %>
                    <%= hidden_field_tag "state", "", :id => "story_state" %>
                    <div class="stoExItem">
                        <div class="stoExItemL">
                            Title*
                        </div>
                        <div class="stoExItemR">
                            <%= f.text_field :title, :class => '{validate:{required:true}}' %>
                        </div>
                    </div>
                    <div class="stoExItem">
                        <div class="stoExItemL">
                            Your story
                        </div>
                        <div class="stoExItemR">
                            <%= f.text_area :content, :style => "width:525px" %>
                        </div>
                    </div>
                    <div class="stoExBtm">
                        <div class="stoExSave" style="margin-left:62px">
                            <a href="javascript:;" onclick="$('#story_state').val('draft');submit();">Save as a Draft</a>
                        </div>
                        <div class="stoExShare">
                            <a href="javascript:;" onclick="$('#story_state').val('share');submit();">Update</a>
                        </div>
                        <div class="stoExCan">
                            <%= link_to "Cancel", user_stories_path(current_user) %>
                        </div>
                    </div>
                    <div class="stoError" style="padding: 10px;">
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contMainR">
    <!--Most Viewed-->
    <%= render :partial => "most_viewed" %>
    <!--Most Viewed-->
    <!--Ads-->
    <%= render :partial => "ads/show_vertical_ads" %>
    <!--Ads-->
</div>
<script type="text/javascript">
    function submit(){
        var result = $("#form").validate({
            meta: "validate"
        });
        if (result) {
            $("#form").submit();
        }
    }
    (function($){
        $('#story_content').wysiwyg({
        
            controls: {
                createLink: {
                    visible: true
                },
                
                insertImage: {
                    visible: true
                },
                
                separator05: {
                    visible: false
                },
                
                separator06: {
                    visible: false
                },
                
                h1mozilla: {
                    visible: false
                },
                h2mozilla: {
                    visible: false
                },
                h3mozilla: {
                    visible: false
                },
                h1: {
                    visible: false
                },
                h2: {
                    visible: false
                },
                h3: {
                    visible: false
                },
                
                removeFormat: {
                    visible: true
                }
            }
        
        });
    })(jQuery);
    
    $(document).ready(function(){
        $('.wysiwyg').css({
            width: '525px'
        });
    });
</script>
