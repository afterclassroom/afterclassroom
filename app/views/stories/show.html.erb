<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => '/shared/submenu' %>
<% end -%>

<div class="slStoryL">
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div class="slsShare">
          <div class="slsShareL">
            <span>You are here:</span>
            <%= link_to "Share a Story", user_stories_path(current_user), :class => "slsShareLink" %>
            <a href="#" class="slsShareLinkL">Detail</a>
          </div>
        </div>
        <div class="stoDet">
          <div class="AsDcomImg"><%= link_to "<div>#{image_tag(@story.user.avatar.url(:thumb))}</div>", {:controller => "profile", :action => "show_profile", :id => @story.user.id} %></div>
          <div class="stoDetR">
            <div class="stoDetRT"><%= @story.user.full_name %>: <%= @story.title %></div>
            <div class="stoDetRB"><a href="#" class="stoDetRBN">Huy Quach’s Story</a><a href="#">HuyQuach’s Profile</a></div>
          </div>
        </div>
        <div class="stoDcont">
          <%= @story.content %>
        </div>
        <%= render :partial => "story_action" %>
        <div class="AsDcom" id="form_comment" style="display: none">
          <h1 class="titleH1">Leave your comments</h1>
          <% if logged_in? %>
            <div class="AsDcomImg"><%= link_to "<div>#{image_tag(current_user.avatar.url(:thumb))}</div>", {:controller => "profile", :action => "show_profile", :id => current_user.id} %></div>
            <div class="AsDcomIn">
              <form name="form_comment" id="form_comment" action="" method="get">
                <div class="AsDcomTxt"><textarea name="comment" id="comment"></textarea></div>
                <div class="submit"><a href="javascript:;" onclick="send_comment('<%= @story.id %>');" >Submit</a></div>
              </form>
            </div>
          <% else %>
            You must be <%= link_to "logged in", login_url %> to post a comment.
          <% end %>
        </div>
        <div class="AsDcomL" id="list_comments">
          <% if @story.comments.size > 0 %>
            <h1 class="titleH1"><a href="javascript:;">Comments (<%= @story.comments.size %>)</a></h1>
            <% @story.comments.each do |c| %>
              <%= render :partial => "shared/item_comment", :locals => {:comnt => c} %>
            <% end %>
          <% end %>
        </div>
        <div class="goTop"><a href="javascript:;" onclick="goToByScroll('top_page')">Top</a></div>
      </div>
    </div>
  </div>
</div>
<div class="contMainR">
  <!--On this story-->
  <%= render :partial => "on_this_story" %>
  <!--On this story-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>
