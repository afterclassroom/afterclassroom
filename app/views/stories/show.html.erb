<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => '/shared/submenu' %>
<% end -%>

<div class="slStoryL">
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div class="slsShare">
          <div class="slsShareL">
            <span>You are here:</span>
            <%= link_to "Share a Story", user_stories_path(current_user), :class => "slsShareLink" %>
            <a href="#" class="slsShareLinkL">Detail</a>
          </div>
        </div>
        <div class="stoDet">
          <div class="AsDcomImg"><%= show_image_user_post(@story.user) %></div>
          <div class="stoDetR">
            <div class="stoDetRT"><%= @story.user.full_name %>: <%= @story.title %></div>
            <div class="stoDetRB"><%= link_to "#{@story.user.name}'s Story", show_stories_user_url(@story.user), :class => "stoDetRBN" %><%= link_to "#{@story.user.name}'s Profile", user_url(@story.user) %></div>
          </div>
        </div>
        <div class="stoDcont">
          <%= raw(@story.content) %>
        </div>
        <%= render :partial => "story_action" %>
        <%= show_post_comments(@story) %>
        <div class="goTop"><a href="javascript:;" onclick="goToByScroll('top_page')">Top</a></div>
      </div>
    </div>
  </div>
</div>
<div class="contMainR">
  <!--On this story-->
  <%= render :partial => "on_this_story" %>
  <!--On this story-->
  <!-- BEGIN list of tagged users for stories -->
  <%= render :partial => "lets_read" %>
  <!-- END list of tagged users for stories -->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>
<script>
  $(document).ready(function() {
  $('.content-center').css({width:'990px'});
  $('.content').css({width:'620px'});
});
</script>