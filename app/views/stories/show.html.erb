<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => '/shared/submenu' %>
<% end -%>

<div class="slStoryL">
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div class="slsShare">
          <div class="slsShareL">
            <span>You are here:</span>
            <%= link_to "Share a Story", user_stories_path(current_user), :class => "slsShareLink" %>
            <a href="#" class="slsShareLinkL">Detail</a>
          </div>
        </div>
        <div class="stoDet">
          <div class="AsDcomImg"><%= link_to raw("<div>#{image_tag(@story.user.avatar.url(:thumb))}</div>"), {:controller => "profile", :action => "show_profile", :id => @story.user.id} %></div>
          <div class="stoDetR">
            <div class="stoDetRT"><%= @story.user.full_name %>: <%= @story.title %></div>
            <div class="stoDetRB"><%= link_to "#{@story.user.name}'s Story", user_stories_url(), :class => "stoDetRBN" %><%= link_to "#{@story.user.name}'s Profile", user_url(@story.user) %></div>
          </div>
        </div>
        <div class="stoDcont">
          <%= raw(@story.content) %>
        </div>
        <%= render :partial => "story_action" %>
        <%= show_post_comments(@story) %>
        <div class="AsDcomL" id="list_comments">
          <% if @story.comments.size > 0 %>
            <h1 class="titleH1"><a href="javascript:;">Comments (<%= @story.comments.size %>)</a></h1>
            <% @story.comments.each do |c| %>
              <%= render :partial => "shared/item_comment", :locals => {:comnt => c} %>
            <% end %>
          <% end %>
        </div>
        <div class="goTop"><a href="javascript:;" onclick="goToByScroll('top_page')">Top</a></div>
      </div>
    </div>
  </div>
</div>
<div class="contMainR">
  <!--On this story-->
  <%= render :partial => "on_this_story" %>
  <!--On this story-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>
