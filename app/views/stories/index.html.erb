<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => 'submenu' %>
<% end -%>

<div class="slStoryL">
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <%= render :partial => "menu" %>
        <div id="friend_stories_list">
          <div class="slsTop">
            <div class="slsTopL">
              <div class="slsTopLT">Friends shared stories</div>
              <div class="slsTopLB friLeft">
                <div class="search">
                  <% form_tag friend_s_user_stories_path(current_user), {:id => "friend_stories_search", :method => "GET"} do %>
                    <div class="textS"><%= text_field_tag "search[name]", "" %></div>
                    <div class="btmS"><a href="javascript:;" onclick="searchFriendStories();"><img src="/images/iconSF.png"/></a></div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="slsTopR">
              <!--Pagination-->
              <div class="assPage friend_stories">
                <span class="numPage"><%= page_entries_info @friend_stories %></span>
                <%= will_paginate @friend_stories %>
              </div>
              <!--Pagination-->
            </div>
          </div>
          <% @friend_stories.each do |f_s| %>
            <%= render :partial => "item", :locals => {:story => f_s} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="contDetL slStoryL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div id="my_stories_list">
          <div class="slsTop">
            <div class="slsTopL">
              <div class="slsTopLT">Your stories</div>
              <div class="slsTopLB friLeft">
                <div class="search">
                  <% form_tag my_s_user_stories_path(current_user), {:id => "my_stories_search", :method => "GET"} do %>
                    <div class="textS"><%= text_field_tag "search[name]", "" %></div>
                    <div class="btmS"><a href="javascript:;" onclick="searchMyStories();"><img src="/images/iconSF.png"/></a></div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="slsTopR">
              <!--Pagination-->
              <div class="assPage my_stories">
                <span class="numPage"><%= page_entries_info @my_stories %></span>
                <%= will_paginate @my_stories %>
              </div>
              <!--Pagination-->
            </div>
          </div>

          <% @my_stories.each do |m_s| %>
            <%= render :partial => "item", :locals => {:story => m_s} %>
          <% end %>
        </div>
        <div class="goTop"><a href="javascript:;" onclick="goToByScroll('top_page')">Top</a></div>
      </div>
    </div>
  </div>
</div>
<div class="contMainR">
  <!--Most Viewed-->
  <%= render :partial => "most_viewed" %>
  <!--Most Viewed-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>

<script type="text/javascript" >
  formatLinkForPaginationURLFriend();
  formatLinkForPaginationURLMy();
</script>