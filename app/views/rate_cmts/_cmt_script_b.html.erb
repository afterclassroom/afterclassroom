            likeAjaxObj<%= @post.id %>.abort();
          }
          $('#dislike_area<%= @post.id %>').hide();
          $('#wait_dislike<%= @post.id %>').show();
          $('#like_area<%= @post.id %>').hide();
          $('#wait_like<%= @post.id %>').show();
          $('#dislike_inner<%= @post.id %>').html('');
          LoadOtherCmt<%= @post.id %>('5','1');
