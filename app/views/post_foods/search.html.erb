<% content_for :you_are_here do -%>
  You are here: <a href="/">Home</a><%= link_to "Foods", post_foods_path, :class => "abLink-detail" %><%= link_to "Search", "#", :class => "abLink-detail" %>
<% end -%>

<% content_for :post_button do -%>
  <%= render :partial => 'shared/post_button', :locals => {:new_post_path => @new_post_path} %>
<% end -%>

<% content_for :menu_sub do -%>
  <%= render :partial => "submenu" %>
<% end -%>

<!--Content-->
<div class="contMainL">
  <div class="col451 QAs">
    <div class="col451in">
      <div class="AsDTop">
        <h1 class="titleH1">Foods</h1>
        <div class="AsDsearch">
          <%= render :partial => "shared/search_indetail", :locals => {:url_search => search_post_foods_path} %>
        </div>
      </div>
      <!--List Items-->
      <% @posts.each do |post| %>
        <%= render :partial => "item", :locals => {:post => post, :title => post.excerpts.title, :description => post.excerpts.description} %>
      <% end %>
      <!--List Items-->

      <!--Pagination-->
      <div class="assPage">
        <span class="numPage"><%= page_entries_info @posts %></span>
        <%= will_paginate @posts %>
      </div>
      <!--Pagination-->
      <div class="goTop"><a href="javascript:;" onclick="goToByScroll('top_page')">Top</a></div>
    </div>
  </div>
</div>

<div class="contMainC">
  <!--Browser Top food providers-->
  <%= render :partial => "top_food_providers" %>
  <!--Browser Top food providers-->

  <!--Browser Top food posters-->
  <%= render :partial => "top_food_posters" %>
  <!--Browser Top food posters-->
</div>

<div class="contMainR">
  <!--Browser by Subject-->
  <%= render :partial => "shared/browser_by_subject", :locals => {:tags => @tags} %>
  <!--Browser by Subject-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->

  <!--Request food-->
  <%= render :partial => "form_request_food" %>
  <!--Request food-->

  <!--Recent Request foods-->
  <%= render :partial => "recent_request_foods" %>
  <!--Recent Request foods-->
</div>
