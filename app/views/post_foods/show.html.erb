<% content_for :you_are_here do -%>
  You are here: <a href="/">Home</a><%= link_to "Food", post_foods_path(:rating_status => @rating_status), :class => "abLink-detail" %><%= link_to "Detail", "#", :class => "abLink-detail" %>
<% end -%>

<% content_for :post_button do -%>
  <%= render :partial => 'shared/post_button', :locals => {:new_post_path => @new_post_path} %>
<% end -%>

<% content_for :menu_sub do -%>
  <%= render :partial => "submenu" %>
<% end -%>

<!--Content-->
<div class="contDetL">
  <div class="contDetLin">
    <div class="AsDTop">
      <h1 class="titleH1">Food detail</h1>
      <div class="AsDsearch">
        <%= render :partial => "shared/search_indetail", :locals => {:url_search => search_post_foods_path} %>
      </div>
    </div>
    <div class="AsDCont">
      <%= display_flash_messages_with_raw %>
      <div class="AsDContL">
        <h2 class="titleH2"><%= @post.title %></h2>
        <div class="AsDContLin">From<span><%= link_to @post.school.name, :controller => "post_foods", :action => "index", :from_school => @post.school %></span></div>
        <div class="AsDContLdes">
          <span>Description:</span>
          <% if @post.attach_file_name and @post.attach_content_type =~ /^image.*/ %>
            <div style="min-height:70px">
              <div class="assImg">
                <div>
                  <%= link_to image_tag(@post.attach.url(:thumb)), @post.attach.url, :class => "imageLink", :target => "_blank" %>
                </div>
              </div><%= @post.description %>
            </div><% else %>
            <%= @post.description %>
          <% end %>
        </div><% if @post_food.address %>
          <div class="AsDContLinf">
            <span>Address:</span>
            <%= @post_food.address %>
          </div>
        <% end %>
        <% if @post_food.phone %>
          <div class="AsDContLinf">
            <span>Phone:</span>
            <%=@post_food.phone %>
          </div>
        <% end %>
        <div class="AsDContLinf">
          <span>Posted by:</span>
          <%= show_user_post(@post.user) %> - <%= time_ago_in_words(@post.created_at, true) + " ago." %>
        </div>
        <% if @post_food.tags_from(@post.school).size > 0 %>
          <div class="AsDContLinf">
            <span>Tags:</span>
            <% @post_food.tags_from(@post.school).each do |t| %>
              <a href='/<%= controller.controller_name %>/tag/?tag_name=<%= t %>'><%= t %></a>, <% end %>
          </div>
        <% end %>
      </div>
      <%= render :partial => "shared/user_infor", :locals => {:user => @post.user, :post => @post} %>
      <%= render :partial => "post_actions", :locals => {:post => @post} %>
    </div>

    <%= show_post_comments(@post) %>
    <div class="goback" id="go_back"><%= show_go_back %></div>
    <div class="comPage">
      <span></span>
      <span class="compre"><%= link_to "", post_food_path(@prev) if @prev %> </span>
      <span class="comnext"><%= link_to "", post_food_path(@next) if @next %></span>
    </div>
    <div class="AsDOr">
      <h1 class="titleH1">Related posts</h1>
      <% PostFood.related_posts(@school, @rating_status).each do |p| %>
        <div class="AsDOrItem"><%= link_to p.title, post_food_path(p.post_food) %></div>
      <% end %>
    </div>
    <div class="goTop"><a href="javascript:;" onclick="goToByScroll('top_page')">Top</a></div>
  </div>
</div>	

<div class="contMainR">
  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->

  <!--Request Food-->
  <%= render :partial => "form_request_food" %>
  <!--Request Food-->

  <!--Recent Request Foods-->
  <%= render :partial => "recent_request_foods" %>
  <!--Recent Request Foods-->
</div>
