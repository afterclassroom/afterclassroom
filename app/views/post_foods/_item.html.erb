<div class="assItem">
  <div class="assItemL">
    <div class="assImg"><div><%= link_to image_tag("/images/icons/icon_defaut/13_foods_50x50.png"), post %></div></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to title, post_food_path(post) %></h2>
      <div class="assCate"><span>Neighborhood:</span><%= link_to post.school.name, :controller => "post_foods", :action => "index", :from_school => post.school, :rating_status => post.post_food.rating_status %></div>
    </div>
    <div class="assDes"><%= truncate_words(description) %></div>
  </div>
  <!--info-link-box-->
  <div class="asslinkdown">
    <div class="moreTutor"><%= post.post_food.address %><br/><%= post.post_food.phone %></div>
    <div class="mySco"><a href="#">View map</a></div>
  </div>
  <!--info-link-box-->
  <div class="assItemB">
    <div class="assPic"><%= link_to "<div>#{image_tag(post.user.avatar.url(:thumb))}</div>", {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= link_to post.user.full_name, {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div>
          <div><span>Comments:</span><%= "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}" %></div>
        </div>
        <div class="assInfR"><%= link_to "more", post_food_path(post) %></div>
      </div>

      <div class="assInfB">

        <div id="rate_<%= post.id %>">
          <%
            check = PostFood.find_rated_by(current_user).include?(post.post_food) if logged_in?
            check ||= false
          %>
          <div class="qashdU">
            <%= show_rating(post.id, post.post_food.total_good, controller.controller_name, check, 2) %>
          </div>
          <div class="cheap">
            <%= show_rating(post.id, "Cheap but Good(#{post.post_food.total_cheap_but_good})", controller.controller_name, check, 1) %>
          </div>
          <div class="qashdD">
            <%= show_rating(post.id, post.post_food.total_bad, controller.controller_name, check, 0) %>
          </div>
        </div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="post_favorite_<%= post.id %>"><%= show_favorite(post) %></div>
      </div>
    </div>
  </div>
</div>