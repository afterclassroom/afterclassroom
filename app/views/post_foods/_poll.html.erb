<%
post_food = PostFood.require_rating(@school).first
%>
<% if post_food %>
  <div class="col195 QAsPoll">
    <div class="col195in">
      <h1 class="col195Title">Poll this Food</h1>
      <div class="col195Cont">
        <div class="QAsPCont">
          <p><%= link_to post_food.post.title, post_food %></p>
          <p><%= truncate_words(post_food.post.description) %></p>
        </div>
        <div id="require_rating_action">
          <div class="QAsDet"><input type="radio" name="rating" value="2" checked="checked"/>Good <strong rel="rate" style="display:none;">(<%= post_food.total_good %>)</strong></div>
          <div class="QAsDet"><input type="radio" name="rating" value="1"/>Cheap but Good <strong rel="rate" style="display:none;">(<%= post_food.total_cheap_but_good %>)</strong></div>

          <div class="QAsDet"><input type="radio" name="rating" value="0"/>Bad <strong rel="rate" style="display:none;">(<%= post_food.total_bad %>)</strong></div>
          <div class="submit"><%= show_submit_rating(post_food.post.id, require_rate_post_foods_path) %></div>
          <div class="PollView" id="view_results">[<a href="javascript:;" onclick="showResult();">View results</a>]</div>
        </div>
      </div>
    </div>
  </div>
<% end %>
