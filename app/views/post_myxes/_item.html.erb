<div class="assItem">
  <div class="assItemL">
    <div class="assImg"><div><%= link_to image_tag("noimg.png"), post %></div></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to title, post_myx_path(post) %></h2>
      <div class="assCate"><span>Neighborhood:</span><%= link_to post.school.name, :controller => "post_myxes", :action => "index", :from_school => post.school, :rating_status => post.post_myx.rating_status %></div>
    </div>
    <div class="assDes"><%= truncate_words(description) %></div>
  </div>
  <div class="asslinkdown">
    <div class="Star">
      <img src="images/starRed.png"/><img src="images/starRed.png"/><img src="images/starRed.png"/><img src="images/starRW.png"/><img src="images/starWhite.png"/>
    </div>
    <div class="moreTutor"><%= post.school.address %></div>
    <div class="mySco"><a href="#">View score</a></div>
  </div>
  <div class="assItemB">
    <div class="assPic"><a href="#"><div><img src="pictures/pic2.png"/></div></a></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= link_to post.user.full_name, {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div>
          <div><span>Comments:</span><%= "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}" %></div>
        </div>
        <div class="assInfR"><%= link_to "more", post_myx_path(post) %></div>
      </div>
      <div class="assInfB">
        <div id="rate_<%= post.id %>">
          <div class="qashdU">
            <% if logged_in? && !PostMyx.find_rated_by(current_user).include?(post.post_myx) %>
              <%= link_to_remote post.post_myx.total_good, { :update => "rate_#{post.id}", :url => {:controller => "post_myxes", :action => "rate", :post_id => post.id, :rating => "2" } } %>
            <% else %>
              <%= link_to post.post_myx.total_good, "javascript:;" %>
            <% end %>
          </div>
          <div class="cheap">
            <% if logged_in? && !PostMyx.find_rated_by(current_user).include?(post.post_myx) %>
              <%= link_to_remote "Bored(#{post.post_myx.total_bored})", { :update => "rate_#{post.id}", :url => {:controller => "post_myxes", :action => "rate", :post_id => post.id, :rating => "1" } } %>
            <% else %>
              <%= link_to "Bored(#{post.post_myx.total_bored})", "javascript:;" %>
            <% end %>
          </div>
          <div class="qashdD">
            <% if logged_in? && !PostMyx.find_rated_by(current_user).include?(post.post_myx) %>
              <%= link_to_remote post.post_myx.total_bad, { :update => "rate_#{post.id}", :url => {:controller => "post_myxes", :action => "rate", :post_id => post.id, :rating => "0" } } %>
            <% else %>
              <%= link_to post.post_myx.total_bad, "javascript:;" %>
            <% end %>
          </div>
        </div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="post_favorite_<%= post.id %>"><%= show_favorite(post) %></div>
      </div>
    </div>
  </div>
</div>