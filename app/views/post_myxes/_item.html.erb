<div class="assItem">
  <div class="assItemL">
    <div class="assImg"><div><%= link_to image_post_thumb(controller.controller_name, post), post.post_myx %></div></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to title, post_myx_path(post.post_myx) %></h2>
      <div class="assCate"><span>Neighborhood:</span><%= link_to post.school.name, :controller => "post_myxes", :action => "index", :from_school => post.school, :rating_status => post.post_myx.rating_status %></div>
    </div>
    <div class="assDes"><%= truncate_words(description) %></div>
  </div>
  <div class="asslinkdown">
    <div class="moreTutor"><%= post.school.address %></div>
    <div class="mySco"><a href="#">View score</a></div>
  </div>
  <div class="assItemB">
    <div class="assPic"><%= show_image_user_post(post.user) %></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= show_user_post(post.user) %></div>
          <div><span>Comments:</span><%= "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}" %></div>
        </div>
        <div class="assInfR"><%= link_to "more", post_myx_path(post.post_myx) %></div>
      </div>
      <div class="assInfB">
        <div id="rate_<%= post.id %>">
           <%
            check = PostMyx.find_rated_by(current_user).include?(post.post_myx) if logged_in?
            check ||= false
          %>
          <div class="qashdU">
            <%= show_rating(post.id, post.post_myx.total_good, controller.controller_name, check, 2) %>
          </div>
          <div class="cheap">
            <%= show_rating(post.id, "Bored(#{post.post_myx.total_bored})", controller.controller_name, check, 1) %>
          </div>
          <div class="qashdD">
            <%= show_rating(post.id, post.post_myx.total_bad, controller.controller_name, check, 0) %>
          </div>
        </div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="item_favorite_<%= post.id %>"><%= show_favorite("Post", post) %></div>
      </div>
    </div>
  </div>
</div>
