<div class="col195 Poster">
  <div class="col195in">
    <h1 class="col195Title">Good Teacher/Prof</h1>
    <div class="col195Cont">
      <%
      goodProf = PostMyx.with_limit.with_school(@school).with_status("Good")
    %>
      <% if goodProf.size > 0 %>
        <%
        goodProf.each do |gp|
        %>
          <div class="teacherItem">
            <div class="recentImg"><%= show_image_teach_of_myx(gp) %></div>
            <div class="teacherInf">
              <div class="recentName"><%= link_to gp.professor, post_myx_path(gp) %></div>
              <div class="recentDes"><%= gp.post.school.name %></div>
            </div>
          </div>
        <%
        end
      %>
        <% if goodProf.size > LIMIT - 1 %>
          <div class="dueDbutton"><%= link_to "View more Good Teacher/Prof", "#{post_myxes_path}?rating_status=Good" %></div>
        <%
        end
      %>
      <%
      end
    %>
    </div>
  </div>
</div>
