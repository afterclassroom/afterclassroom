<script language="javascript">
    var submit_url = $('#form_invite_friend').find('a').attr('href');
    $('#form_invite_friend').find('a').bind('click',function(){
				$('#send_invite_button').html('<a>Sending ...</a>');
        var strMessage = $('#message').val();
        $.ajax({
            url: submit_url,
            type: "GET",
            data:({
                invite_message:strMessage,
                full_name:'<%= @full_name %>',
                user_invite: '<%= @user_invite %>'
            }),
            dataType: "html",
            failure: function(msg){
                alert('ajax fail:'+msg);
            },
            success: function(msg){
                $('#TB_closeWindowButton').click();
                $('#friend_<%= @user_invite %>').html(msg);
								$('#link_invite').attr('href', 'javascript:;');
								$('#link_invite').attr('class', '');
            }
        });

        return false;
    });
</script>
<div id="send_invite_message" class="postCont">
  <form name="form_send_invite" id="form_invite_friend">
    <div class="postItem" style="margin-top: 15px">
      <div class="postItem1" style="width: 80px;">Message:</div>
      <div class="postInp">
        <textarea style="width: 330px; height: 200px;" id="message"></textarea>
      </div>
    </div>
    <!-- post  button -->
    <div class="sendIn" style="margin-left:90px">
      <div class="sendFr" id="send_invite_button">
        <%= link_to "Send invite message to "+@full_name, :controller => "friends", :action => "send_invite_message", :user_invite => @user_invite %>
      </div>
    </div>
    <!-- end post button -->
  </form>
</div>