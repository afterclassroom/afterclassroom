Hello friend: <%= friend.id.to_s %>
<div class="flistItem">
  <div class="assPic"><%= show_image_user_post(friend) %></div>
  <div class="flistInf">
    <div class="flistN"><%= show_user_post(friend) %></div>
    <div class="flistS"><span>at</span><%= friend.school.name %></div>
  </div>
  <div class="flistR">
    <div class="flistRAdd">
      <a href="#"><span>Add to List======val - <%= @group.to_s %>===========</span></a>
      <ul>
        <li>
          <input id="Family_members" type="checkbox" <%= "friSelect" if action_name == "list" && @group == "family_members" %> />
          <%= link_to "Family members", list_user_friends_path(current_user, :group => "family_members", :friend_id => friend.id) %>
        </li>
        <li><input id="Friends_from_school" type="checkbox" <%= "friSelect" if action_name == "list" && @group == "friends_from_school" %> />
          <%= link_to "Friends from school", list_user_friends_path(current_user, :group => "friends_from_school", :friend_id => friend.id) %></li>
        <li><input id="Friends_from_work" type="checkbox" <%= "friSelect" if action_name == "list" && @group == "friends_from_work" %> />
          <%= link_to "Friends from work", list_user_friends_path(current_user, :group => "friends_from_work", :friend_id => friend.id) %></li>
        <li><input id="General_Friends" type="checkbox" <%= "friSelect" if action_name == "list" && @group == "general_friends" %> />
          <%= link_to "General Friends", list_user_friends_path(current_user, :group => "general_friends", :friend_id => friend.id) %></li>
      </ul>
    </div>
    <div class="flistRdelete"><a href="javascript:;" onclick="DeleteFriend('<%= friend.id %>');"> </a></div>
  </div>
</div>




