<script type="text/javascript">

  $(document).ready(function ()
  {
    $("#btnShowSimplev").click(function (e)
    {
      ShowDialogv(false);
      e.preventDefault();
    });

    $("#btnShowModalv").click(function (e)
    {
      ShowDialogv(true);
      e.preventDefault();
    });

    $("#btnClosev").click(function (e)
    {
      HideDialogv();
      e.preventDefault();
    });

    $("#btnSubmit").click(function (e)
    {
      var brand = $("#brands input:radio:checked").val();
      $("#output").html("<b>Your favorite mobile brand: </b>" + brand);
      HideDialogv();
      e.preventDefault();
    });
  });

  function ShowDialogv(modalv)
  {
    $("#overlayv").show();
    $("#dialogv").fadeIn(300);

    if (modalv)
    {
      $("#overlayv").unbind("click");
    }
    else
    {
      $("#overlayv").click(function (e)
      {
        HideDialogv();
      });
    }
  }

  function HideDialogv()
  {
    $("#overlayv").hide();
    $("#dialogv").fadeOut(300);
  } 
        
</script>

