<a id="signin_pp" href="#"><span>Sign in pp</span></a>

<div id="dialog_signin_pp" style="margin-top: -25px;display: none;">
  <a id="signin_ppClose"></a>
  <div>
    <div class="contDetL" style="background:none">
      <div class="contDetLin" style="background:none">
        <div class="signinCont">
          <div class="postReq">*(asterisk) is required.</div>
          <%= render :partial => "sessions/login_form" %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>

  $(document).ready(function(){
    $("body").append("<div id='signin_pp_dialog' style='display: none;'></div>");
  });
  $(document).ready(function(){
    $("#signin_pp").click(function(){
      open_signin();
    });
    $("#signin_ppClose").click(function(){
      $("#dialog_signin_pp").dialog("close");
      $("#signin_pp_dialog").hide();
    });
  });
	function open_signin(){
		$("#signin_pp_dialog").show();
      $("#dialog_signin_pp").dialog(
      { height: 360,
        width: 680,
        resizable: false,
        open: function(){ $(".ui-dialog-titlebar-close").hide();
          $(this).parents(".ui-dialog:first").find(".ui-widget-header")
          .removeClass("ui-widget-header").addClass("ui-widget-header-custom");
        }
      });
	}
</script>
<style>
  #signin_pp_dialog {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: 99;
    display: none;
    background-color: black;
    filter: alpha(opacity=70);
    opacity: 0.7;
  }
  #signin_ppClose{
    background: url("/images/Photo/fancybox.png") repeat scroll -40px 0 transparent;
    cursor: pointer;
    height: 30px;
    position: absolute;
    right: 0px;
    top: 0px;
    width: 30px;
    z-index: 1103;
  }

</style>
