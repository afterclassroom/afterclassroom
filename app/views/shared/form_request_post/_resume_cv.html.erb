<!--
3 types of job files
Cover letter
Transcript
Resume*

-->
<%= fields_for :letter do |builder1| %>  
  <div class="reqLa">
    <%= builder1.label :category, "Cover letter" %>
    <%= builder1.hidden_field :category, :value => "Cover letter" %>
  </div>
  <div class="postItemB">
    <div id="divinputfile">
      <div class="postItemC" style="width:300px">
        <%= builder1.file_field :resume_cv, :onchange => "$('#fakefilepc0').val(this.value);", :size => "39", :style => "height:24px;width:280px;", :class => "filepc"  %>
      </div>
      <div id="fakeinputfile" style="margin-top:-23px"><input name="fakefilepc" type="text" id="fakefilepc0" /></div>
    </div>
  </div>
<% end %>

<%= fields_for :transcript do |builder2| %>
  <div class="reqLa">
    <%= builder2.label :category, "Transcript" %>
    <%= builder2.hidden_field :category, :value => "Transcript" %>
  </div>
  <div class="postItemB">
    <div id="divinputfile">
      <div class="postItemC" style="width:300px">
        <%= builder2.file_field :resume_cv, :onchange => "$('#fakefilepc1').val(this.value);", :size => "39", :style => "height:24px;width:280px;", :class => "filepc"   %>
      </div>
      <div id="fakeinputfile" style="margin-top:-23px"><input name="fakefilepc" type="text" id="fakefilepc1" /></div>
    </div>
  </div>
<% end %>

<%= fields_for :resume do |builder3| %>
  <div class="reqLa">
    <%= builder3.label :category, "Resume*" %>
    <%= builder3.hidden_field :category, :value => "Resume" %>
  </div>
  <div class="postItemB" style="margin-bottom:5px;">
    <div id="divinputfile">
      <div class="postItemC" style="width:300px">
        <%= builder3.file_field :resume_cv, :onchange => "$('#fakefilepc2').val(this.value);", :size => "39", :style => "height:24px;width:280px;", :class => "filepc {validate:{required:true}}"   %>
      </div>
      <div id="fakeinputfile" style="margin-top:-23px"><input name="fakefilepc" type="text" id="fakefilepc2"/></div>
    </div>
  </div>
<% end %>

<script language="javascript">
    $(document).ready(function(){
        $('#fakefilepc0').css('width','208px');
        $('#fakefilepc1').css('width','208px');
        $('#fakefilepc2').css('width','208px');


    });
</script>