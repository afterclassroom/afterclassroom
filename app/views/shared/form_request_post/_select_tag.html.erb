<div class="reqItem">
  <div class="reqLa"><label>Tags</label></div>
  <div class="reqTi"><%= text_field_tag "tag", "", :style => "width:280px" %></div>
</div>
<script type="text/javascript">
    var path = "<%= show_tags_list_tags_url %>?class_name=<%= @class_name %>";
    $(function () {
        $('#tag').tagSuggest ( {
            tagContainer : 'div',
            tagWrap : 'div',
            url: path,
            separator: ', '
        });
    }) ;
</script>
