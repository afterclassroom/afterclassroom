<div class="postItem" style="background:url(/images/upload_file.png) no-repeat 59% 2px;">
  <%= fields_for :letter do |builder1| %>
    <div class="postTitCV" style="font-weight: bold;line-height: 20px;width: 110px;">
      <%= builder1.label :category, "Cover letter" %><%= builder1.hidden_field :category, :value => "Cover letter" %>
    </div>
    <div id="divinputfile">
      <div class="postItemC">
        <%= builder1.file_field :resume_cv, :size => "39", :class => "filepc" %>
      </div>
      <div class="postUpfileCV">
        <div id="fakeinputfile" >
          <input name="fakefilepc" type="text" id="fakefilepc" style="margin-top:1px; margin-left:-300px;"/></div>
      </div>
    </div>
  <% end %>
</div>

<div class="postItem" style="background:url(/images/upload_file.png) no-repeat 59% 2px;">
  <%= fields_for :transcript do |builder2| %>
    <div class="postTit"><%= builder2.label :category, "Transcript" %><%= builder2.hidden_field :category, :value => "Transcript" %></div>
    <div id="divinputfile">
      <div class="postItemC">
