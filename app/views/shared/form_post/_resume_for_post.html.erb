</div>

<div class="postItem" style="background:url(/images/upload_file.png) no-repeat 59% 2px;">
  <%= fields_for :resume do |builder3| %>
    <div class="postTit"><%= builder3.label :category, "Resume*" %><%= builder3.hidden_field :category, :value => "Resume" %></div>
    <div id="divinputfile">
      <div class="postItemC">
        <%= builder3.file_field :resume_cv, :size => "39", :class => "filepc" %>
      </div>
      <div class="postUpfileCV">
