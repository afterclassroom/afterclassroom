<div class="postItemReCV" style="margin-top: -3px;">
<%= fields_for :letter do |builder1| %>
  <div class="postTitt">
    <%= builder1.label :category, "Cover letter" %><%= builder1.hidden_field :category, :value => "Cover letter" %>
  </div>
  <div class="postItemA">
    <div id="divinputfile" style="margin-left:120px;">
      <div class="postItemC">
        <%= builder1.file_field :resume_cv, :size => "39", :class => "filepc", :style => "width:300px" %>
      </div>
      <div class="postUpfile">
        <div id="fakeinputfile" >
          <input name="fakefilepc" type="text" id="fakefilepc" style="margin-top:-3px" /></div>
      </div>
    </div>
  </div>
<% end %>
</div>

