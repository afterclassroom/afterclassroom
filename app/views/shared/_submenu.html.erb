<div class="stuLtop">
  <div class="menuRL">
    <div class="menuRItem mnChat"><%= link_to raw('<span class="span1"><span class="span2">Chat</span></span>'), chat_user_student_lounges_path(current_user), :class => "#{'menuRselect' if controller.controller_name == 'student_lounges' && @controller.action_name == 'chat'}" %></div>
    <div class="menuRItem mnShare"><%= link_to raw('<span class="span1"><span class="span2">Share a Story</span></span>'), user_stories_path(current_user), :class => "#{'menuRselect'  if controller.controller_name == 'stories'}" %></div>
    <div class="menuRItem mnPho"><%= link_to raw('<span class="span1"><span class="span2">Photos</span></span>'), user_photos_path(current_user), :class => "#{'menuRselect' if controller.controller_name == 'photos'}" %></div>
    <div class="menuRItem mnMus"><%= link_to raw('<span class="span1"><span class="span2">Musics</span></span>'), user_musics_path(current_user), :class => "#{'menuRselect' if controller.controller_name == 'musics'}" %></div>
    <div class="menuRItem mnVi"><%= link_to raw('<span class="span1"><span class="span2">Videos</span></span>'), user_youtubes_path(current_user), :class => "#{'menuRselect' if controller.controller_name == 'youtubes'}" %></div>
  </div>
  <% if ['stories', 'photos', 'musics', 'youtubes'].include?(controller.controller_name) %>
  <%
    case controller.controller_name
    when 'stories'
      s_link = link_to("Post", new_user_story_path(current_user))
    when 'photos'
      s_link = link_to("Post", new_user_photo_path(current_user))
    when 'musics'
      s_link = link_to("Post", new_user_music_path(current_user))
    when 'youtubes'
      s_link = link_to("Post", new_user_youtube_path(current_user))
    end
  %>
  <div class="postdiv">
    <span class="RmenuRbtm2"><%= s_link %></span>
  </div>
  <% end %>
</div>
