<div class="login">
  <div class="view_userLogin"><%= render :partial => 'shared/view_new' %></div>
  <div class="signin">
    <ul>
      <li class="signinSelect"><%= link_to raw("<span>Welcome #{current_user.full_name}</span>"), user_profiles_path(current_user), :class => "signinFrist", :onfocus => "this.value = '';", :onblur => "this.value = this.value || this.defaultValue;" %></li>
      <li><%= link_to raw("<span>Sign out</span>"), logout_url, :method => :delete %></li>
      <li><%= link_to content_tag(:span, 'Help'), :controller => 'forums', :action => 'index' %></li>
    </ul>
  </div>
</div>
