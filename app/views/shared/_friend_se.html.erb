<div class="feedback-panel" style="top:14%">
  <a class="feedback-tab" style="display: none"></a>
  <div class="contMainR" style="float:left">
    <div class="feed_close" style="position: absolute;margin-top: -25px;margin-left: 110px"><img src="/images/search_for_friends.png" width="192px" height="29px"/></div>
    <!--Find people-->
    <%= render :partial => "friends/find_people_for" %>
    <!--Find people-->
  </div>
</div>
<script type="text/javascript" language="javascript" src="/javascripts/jquery.cookie.js"></script>
<script>
  $(document).ready(function(){  
    $('a.feedback-tab').show();
    $('a.feedback-tab').click(function(){
      $('.feedback-panel').animate({right:'301'}, 300);
      $('a.feedback-tab').hide(300);
      $.cookie('feedbackpanel', 'collapsed');
    });
    $('.feed_close,a#feedback_close_fr').click(function(){
      $('.feedback-panel').animate({right:'0'},  300);
      $('a.feedback-tab').show();
      $.cookie('feedbackpanel', 'expanded');
    });    
     var feedbackpanel = $.cookie('feedbackpanel');
    // Set the user's selection for the toolbar
    if (feedbackpanel == 'collapsed') {
      $(".feedback-panel").animate({right:'301'}, 300);
      $('a.feedback-tab').hide(300);
    };
  });
</script>
