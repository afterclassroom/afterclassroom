<!--Select School-->
<div id="target_select_school">
  <% if session[:your_school]
    school = School.find(session[:your_school])
  %>
    Your are at <strong><%= school.name %></strong> - <%= link_to("Click here", "/users_select_school/show?height=200",  :rel=>"facebox" ) %> to choose another school.
  <% else %>
    <%= link_to("Click here", "/users_select_school/show?height=200",  :rel=>"facebox") %> to choose your school.
  <% end %>
</div>
<!--Select School-->
<script>
  $(function() {
    var top = 70;
    $(window).scroll(function() {
      $('#facebox').stop().animate({ top: $(window).scrollTop() + top}, 1);
    });
  });
  $("body").append("<div id='opaque' style='display: none;'></div>");

  $(document).bind('loading.facebox', function() {
    $("#opaque").show();
  });
  $(document).bind('close.facebox', function() {
    $("#opaque").hide();
  });
  $(document).bind('afterReveal.facebox', function() {
    // this is a fix for IE6 which resets the height to 100% of the window height
    $("#opaque").height($(document).height());
  });

</script>