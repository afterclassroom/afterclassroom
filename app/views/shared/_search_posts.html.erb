<form id="action_post_search" name="search" action="<%= search_post_path %>" method="get">
  <div class="search">
    <div class="textS" style="padding-right: 2px;">
      <input type="text" name="search[query]" value="<%= query || "Enter your search keywords..." %>" onblur="this.value = this.value || this.defaultValue;" onfocus="this.value = '';" style="width:161px;text-indent: 0px;" />
    </div>
    <div class="selectS"><%= select_tag("search[type]", options_for_select(PostCategory.find(:all).map{|cat| [cat.name,cat.id]}, type), :onchange => "getPostSearchType($('#search_type :selected').text());", :id => "search_type") %></div>
    <div class="btmS" style="margin-left: 3px;"><a href="javascript:;" onclick="$('#action_post_search').submit();"><img src="/images/icon-search.png" /></a></div>
  </div>
</form>
