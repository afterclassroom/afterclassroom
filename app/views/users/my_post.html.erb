<% content_for :search do -%>
  <%= render :partial => 'shared/search_inbox', :locals => {:search_name => @search_name, :type_name => "Home", :action_path => "#{dashboard_user_path(current_user)}"} %>
<% end -%>

<div id="list_post_div">
<table>
  <tr>
    <th>Post category</th>
    <th>Title</th>
    <th>Date</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%=h post.post_category.name %></td>
    <td><%=h post.title %></td>
    <td><%=h post.created_at %></td>
    <td><%= show_post(post) %></td>
    <td><%= edit_post(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= will_paginate @posts, :class => "digg_pagination" %>
</div>