<% content_for :sidebar do -%>
  <span class="dred_box">Password Recovery</span>
  <% if flash[:notice] %>
      <div id="notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:warning] %>
      <div id="warning"><%= flash[:warning] %></div>
    <% end %>

    <% if flash[:error] %>
      <div id="error"><%= flash[:error] %></div>
    <% end %>
  <div class="signup-form">
    <% unless @user.nil? %>
      <% if @user.active? %>
        <p>An email containing further instructions has been dispatched to you at <em><%= @user.email %></em>.</p>
        <p>Please follow the instructions in the email to recover your account's password.</p>
      <% else %>
        <p>Your account is currently not active. You cannot reset your password when your account is not active.</p>
        <p>Please contact <%= configatron.support_name %> at <%= secure_mail_to configatron.support_email %>
      <% end %>
    <% else %>
      <p>Please enter the login or email address associated with your account. We will send you an email with further instructions shortly.</p>

      <% form_tag user_forgot_password_url, :name => "form", :id => "form", :method => :put do %>
        <label>Your login or email address</label>
        <%= text_field_tag :email_or_login %>
        <div class="bt-signin">
          <!-- button -->
          <a href="#" onclick="document.form.submit()" class="link_bt">
            <span class="ltred_l"></span>
            <span class="ltred_c btf">Recover my password &raquo;</span>
            <span class="ltred_r"></span>
          </a>
          <!-- endbutton -->
        </div>
      <% end %>
    </div>
  <% end %>
<% end -%>

<!--Content-->
<%= render :partial => "sessions/signin_introduction" %>
