<% content_for :you_are_here do -%>
You are here: <a href="/">Home</a>
<%= link_to "Password Recovery", "javascript:;", :class => "abLink-detail" %>
<% end -%>
<!--Content-->
<div class="contDetL">
    <div class="contDetLin">
        <div class="AsDTop">
            <h1 class="titleH1">Password Recovery</h1>
        </div>
        <div class="signUpCont">
            <%= display_flash_messages_with_raw %>
            <% unless @user.nil? %>
            <% if @user.active? %>
            <div class="welBackCont">
                An email containing further instructions has been dispatched to you at <em><%= @user.email %></em>.
                <br/>
                Please follow the instructions in the email to recover your account's password.
            </div>
            <% else %>
            <div class="welBackCont">
                Your account is currently not active. You cannot reset your password when your account is not active.
                <br/>
                Please contact <%= configatron.support_name %>at <%= secure_mail_to configatron.support_email %>
            </div>
            <% end %>
            <% else %>
            <div class="welBackCont">
                Please enter the email address associated with your account.
                <br/>
                We will send you an email with further instructions shortly.
            </div>
            <%= form_tag user_forgot_password_url, :name => "form_forget", :id => "form_forget", :method => :put do %>
            <div class="signinItem">
                <div class="signinTit" style="width: 115px">
                    Your email address:
                </div>
                <div class="signinInp">
                    <%= text_field_tag :email, @email, :class => "{validate:{required:true, email:true}}" %>
                </div>
                <div style="margin-left: 5px;" class="submit">
                    <a href="javascript:;" onclick="forget_password();">Recover</a>
                </div>
            </div>
            <% end %>
            <% end %>
        </div>
    </div>
</div>
<div class="contMainR">
    <%= render :partial => "welcome_back" %>
    <%= render :partial => "ads/show_vertical_ads" %>
</div>
<!--Content-->
