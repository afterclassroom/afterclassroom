<% content_for :you_are_here do -%>
  You are here: <a href="/">Home</a><%= link_to "Password Recovery", "", :class => "abLink-detail" %>
<% end -%>

<!--Content-->
<div class="contDetL">
  <div class="contDetLin">
    <div class="AsDTop">
      <h1 class="titleH1">Password Recovery</h1>
    </div>
    <div class="signUpCont">
      <%= display_flash_messages_with_raw %>
      <% unless @user.nil? %>
        <% if @user.active? %>
          <div class="welBackCont">
            <p>An email containing further instructions has been dispatched to you at <em><%= @user.email %></em>.</p>
            <p>Please follow the instructions in the email to recover your account's password.</p>
          </div>
        <% else %>
          <div class="welBackCont">
            <p>Your account is currently not active. You cannot reset your password when your account is not active.</p>
            <p>Please contact <%= configatron.support_name %> at <%= secure_mail_to configatron.support_email %></p>
          </div>
        <% end %>
      <% else %>
        <div class="welBackCont"><p>Please enter the login or email address associated with your account.</p>
          <p>We will send you an email with further instructions shortly.</p></div>

        <%= form_tag user_forgot_password_url, :name => "form", :id => "form", :method => :put do %>
          <div class="signinItem">
            <div class="signinTit" style="width: 195px">Your login or email address:</div>
            <div class="signinInp"><%= text_field_tag :email_or_login %></div>
          </div>
          <div class="btmCreAc" style="padding-left: 205px"><a href="javascript:;" onclick="submit();">Recover</a></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="contMainR">
  <%= render :partial => "welcome_back" %>
  <%= render :partial => "ads/show_vertical_ads" %>
</div>
<!--Content-->