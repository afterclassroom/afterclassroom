<% content_for :you_are_here do -%>
  You are here: <a href="/">Home</a><%= link_to "Sign Up", "javascript:;", :class => "abLink-detail" %>
<% end -%>

<!--Content-->
<div class="contDetL">
  <div class="contDetLin">
    <div class="AsDTop">
      <h1 class="titleH1">Sign Up</h1>
    </div>
    <div class="signUpCont">
      <%= display_flash_messages_with_raw %>
      <%= form_for :user, :url => users_path, :html => {:id => "form_signup", :name => "form_signup"} do |f| -%>
        <div class="signNode">*(asterisk) is required.</div>
        <div class="signinItem">
          <div class="signinTit">First Name*:</div>
          <div class="signinInp"><%= text_field_tag :first_name, session[:first_name],  :class => '{validate:{required:true}}' %></div>
        </div>
        <div class="signinItem">
          <div class="signinTit">Last Name*:</div>
          <div class="signinInp"><%= text_field_tag :last_name, session[:last_name], :class => '{validate:{required:true}}' %></div>
        </div>
        <div class="signinItem">
          <div class="signinTit">Email*:</div>
          <div class="signinInp"><%= f.text_field :email, :class => '{validate:{required:true, email:true}}' %></div>
        </div>
        <div class="signinItem">
          <div class="signinTit">New Password*:</div>
          <div class="signinInp"><%= f.password_field :password, :class => "{validate:{required:true, minlength:6}}" %></div>
        </div>
        <div class="signinItem">
          <div class="signinTit">Confirm*:</div>
          <div class="signinInp"><%= f.password_field :password_confirmation, :class => "{validate:{equalTo:'#user_password'}}" %></div>
        </div>
        <div class="popup2" id="select_school">
          <%= render :partial => "select_school" %>
        </div>
        <div class="signincCheck" style="padding-left:106px">
          <div><%= f.check_box :allow_search_by_email %></div>
          <div class="signincCheckTxt">Let others find my post on Afterclassroom if they have my email address.</div>
        </div>
        <div class="btmCreAc" style="padding-left:110px"><a href="javascript:;" onclick="submitt();"><%= submit_tag 'Create my account' %></a></div>
        <div class="signincCheck" style="padding-left:110px">
          By clicking "Create my account", you agree to Afterclassroom <%= link_to 'Terms of use', :controller => 'statics', :action => 'terms' %> and <%= link_to 'Privacy Policy', :controller => 'statics', :action => 'privacy' %>.
        </div>
      <% end -%>
    </div>
  </div>
</div>

<div class="contMainR">
  <%= render :partial => "welcome_back" %>
  <%= render :partial => "ads/show_vertical_ads" %>
</div>
<!--Content-->

<script type="text/javascript">
  function submitt(){
    var result = $("#form_signup").validate({
			meta: "validate"
    });
    if (result) {
      $("#form_signup").submit();
    }
  }

  $(document).ready(load_menus);
  function update_form(type_select, id, type_school){
    $.ajax({
      url: '/users_select_school/update_form_signup',
      type: 'GET',
      cache: false,
      dataType: 'html',
      data: ({
        type : type_select,
        id : id,
				type_school: type_school
      }),
      success: function(data){
        $('#select_school').html(data);
        load_menus();
      }
    });
  }

  function select_country(){
    update_form("country", $('#country').val(), $('input:radio[name=school_type]:checked').val());
  }

  function select_state(){
    update_form("state", $('#state').val(), $('input:radio[name=school_type]:checked').val());
  }

  function select_city(){
    update_form("city", $('#city').val(), $('input:radio[name=school_type]:checked').val());
  }

  function load_menus (){
    $("#country").mcDropdown("#country_menu", {
      width: 230,
      valueAttr: "rel_country",
      select: select_country
    });
    $("#state").mcDropdown("#state_menu", {
      width: 230,
      valueAttr: "rel_state",
      select: select_state
    });
    $("#city").mcDropdown("#city_menu", {
      width: 230,
      valueAttr: "rel_city",
      select: select_city
    });
    $("#school").mcDropdown("#school_menu", {
      width: 230,
      valueAttr: "rel_school"
    });
  }
 
</script>
