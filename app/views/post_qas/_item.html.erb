<div class="assItem">
    <div class="assItemL">
        <div class="assPic">
            <%= post.post_qa.anonymous ? raw('<div style="height: 52px;"><img title="Anonymous" src="/images/icons/icon_defaut/icon_members.png?1321524145" class="vtip avatar_144" alt="Icon_members"></div>') : show_image_user_post(post.user) %>
        </div>
        <div class="assContT">
            <h2 class="titleH2"><%= link_to title, post_qa_path(post.post_qa) %></h2>
            <div class="assCate">
                <span>From:</span>
                <%= link_to post.school.name, :controller => "post_qas", :action => "index", :from_school => post.school %>
            </div>
            <div class="assDes">
								<% if !check_image_in_content(post.description) %>
                <div class="assImg">
                    <div>
                        <%= link_to image_post_thumb(controller_name, post), post.post_qa %>
                    </div>
                </div>
								<% end %>
                <%= truncate_html(description, :length => 250, :omission => '...') %>
            </div>
        </div>
    </div>
    <div class="assItemB">
        <div class="assInfT">
            <div class="assInfT">
                <div class="assInfL">
                    <div>
                        <span>Asked by:</span>
                        <%= post.post_qa.anonymous ? "Anonymous" : show_user_post(post.user) %>
                    </div>
                </div>
            </div>
            <div class="assInfB">
                <div class="vie">
                    <%= "View (#{post.count_view})" %>
                </div>
                <div class="fav" id="item_favorite_<%= post.id %>">
                    <%= show_favorite("Post", post) %>
                </div>
								<%= render :partial => "post_qas/rating_action", :locals => {:post => post, :controller_name => controller.controller_name}%>
                <div class="com">
                    <%= show_answer_button(post.id, post.comments.size) %>
                </div>
            </div>
        </div>
    </div>
    <!--Comments-->
    <%= render :partial => "shared/post_comments/show_list_comments", :locals => {:post => post} %>
    <!--Comments-->
</div>
