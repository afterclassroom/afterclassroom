<div class="assItem">
  <div class="assItemL">
    <div class="assImg"><div><%= link_to image_tag("noimg.png"), post %></div></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to title, post_qa_path(post) %></h2>
      <div class="assCate"><span>From:</span><%= link_to post.school.name, :controller => "post_qas", :action => "index", :from_school => post.school, :type => @type %></div>
    </div>
    <div class="assDes"><%= truncate_words(description) %></div>
  </div>
  <div class="asslinkdown">
    <div class="morelink"><%= link_to "More like this", :controller => "post_qas", :action => "index", :more_like_this_id => post, :type => @type %></div>
    <div class="numAns">
      <div class="numAnsA"><%= post.comments.size %></div>
      <div class="numAnsB">answers</div>
    </div>
  </div>
  <div class="assItemB">
    <div class="assPic"><%= link_to "<div>#{image_tag(post.user.avatar.url(:thumb))}</div>", {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= link_to post.user.full_name, {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div>
          <div><span>Comments:</span><%= "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}" %></div>
        </div>
        <div class="assInfR"><%= link_to "more", post_qa_path(post) %></div>
      </div>
      <div class="assInfB">
        <div><%= post.created_at.strftime("%I:%M %p %Z") %></div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="post_favorite_<%= post.id %>"><%= show_favorite(post) %></div>
        <div id="rate_<%= post.id %>">
          <%
            check = PostQa.find_rated_by(current_user).include?(post.post_qa) if logged_in?
            check ||= false
          %>
          <div class="qashdU">
            <%= show_rating(post.id, post.post_qa.total_good, controller.controller_name, check, 1) %>
          </div>
          <div class="qashdD">
            <%= show_rating(post.id, post.post_qa.total_bad, controller.controller_name, check, 0) %>
          </div>
         </div>
      </div>
    </div>
  </div>
</div>