<div class="col300 Request">
  <div class="col300in">
    <h1 class="col300Title">Got questions? Ask experts now</h1>
    <div class="col300Cont">
      <% form_for :post_qa, :url => {:action => "create"}, :html =>{:multipart => true, :id => "form_post"} do |f| %>
        <% fields_for :post do |p| %>
          <div class="reqSe"><%= f.text_field :post_qa_category_id %></div>
          <div class="reqTi"><%= p.text_field :title, :value => "Title..." %></div>
          <div class="reqEn"><%= text_area_tag "post[description]", "Enter your content..." %></div>
          <div class="reqLa"><label>Tags</label></div>
          <div class="reqTi"><%= text_field_tag "tag" %></div>
          <div id="recaptcha_container">
            <div class="reqLa"><label>Enter the two words below</label></div>
            <div class="reqTi"><%= text_field_tag "recaptcha_response_field" %></div>
            <div id="recaptcha_image"></div>
          </div>
          <%= recaptcha_tags(:display => {:theme => "custom"}) %>
          <div class="regReload"><a class="regRlBt" href="javascript:Recaptcha.reload();">Get new words</a></div>
          <div class="submit"><%= show_submit_form() %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<ul id="qa_cat_menu" class="mcdropdown_menu">
  <li rel_qa_cat="">
    Select category
  </li>
  <% PostQaCategory.find(:all).each do |p| %>
    <li rel_qa_cat="<%= p.id %>">
      <%= p.name %>
    </li>
  <% end %>
</ul>

<script type="text/javascript">
  $("#post_qa_post_qa_category_id").mcDropdown("#qa_cat_menu", {
    width: 250,
    valueAttr: "rel_qa_cat"
  });
</script>