<form name="form_<%= @chanel.chanel_name %>">
  <div class="SLchatB">
    <div class="assPic"><%= link_to "<div>#{image_tag(@user_with_chat.avatar.url(:thumb))}</div>", "javascript:;" %></div>
    <div class="SLchatR">
      <div class="SLchatView">
        <div class="SLchatViewT">
          <div class="SLchatViewL"><a href="#">Invite Wing man</a></div>
          <div class="SLchatViewR"><a href="#">Invite Wing woman</a></div>
        </div>
        <div class="SLchatViewTCont">
          <div id="chat_content_<%= @chanel.chanel_name %>" style="height:100px; overflow-y:auto;">
            <ul>
              <% for message in @messages %>
                <li>
                  <%= message.user.full_name + ":" if !message.notify_msg %> <%= message.message %>
                </li>
              <% end %>
              <li id="<%= @chanel.chanel_name %>"></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="SLchatSend">
        <div class="SLchatSendCont">
          <div class="reqEn"><textarea style="height:46px;" name="chat_input_<%= @user_with_chat.id %>" id="chat_input_<%= @user_with_chat.id %>"></textarea></div>
        </div>
        <div class="SLchatSendBtm"><%= link_to "Send", "javascript:;", :onclick => "send_data('#{@user_with_chat.id}', '#{@chanel.chanel_name}')" %></div>
      </div>
    </div>
  </div>
</form>