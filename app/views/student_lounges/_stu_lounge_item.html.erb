<div class="col451Cont">
  <% @walls.each do |w| %>
    <div class="assItem">
      <div class="assItemL">
        <div class="assImg"><div><a href="#"><img src="pictures/pic4.png"></a></div></div>

        <div class="assCate"><span><a href="#" style="color: #000000;">&nbsp;&nbsp;<%= w.content %></a></span></div>
      </div>
      <div class="asslinkdown">
