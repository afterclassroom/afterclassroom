<div class="assItem">
  <div class="assItemL">
    <div class="assImg"><div><%= link_to image_tag("noimg.png"), post %></div></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to title, post_tutor_path(post) %></h2>
      <div class="assCate"><span>From:</span><%= link_to post.school.name, :controller => "post_tutors", :action => "index", :from_school => post.school %></div>
    </div>
    <div class="assDes"><%= truncate_words(description) %></div>
  </div>
  <!--info-link-box-->
  <div class="asslinkdown">
    <div class="Star">
      <img src="images/starRed.png"/><img src="images/starRed.png"/><img src="images/starRed.png"/><img src="images/starRW.png"/><img src="images/starWhite.png"/>
    </div>
    <div class="moreTutor"><%= post.post_tutor.address %></div>
    <div class="mySco"><a href="#"><%= post.post_tutor.show_score %></a></div>
  </div>
  <!--info-link-box-->
  <div class="assItemB">
    <div class="assPic"><%= link_to "<div>#{image_tag(post.user.avatar.url(:thumb))}</div>", {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= link_to post.user.full_name, {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div>
          <div><span>Comments:</span><%= "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}" %></div>
        </div>
        <div class="assInfR"><%= link_to "more", post_tutor_path(post) %></div>
      </div>
      <div class="assInfB">
        <div id="rate_<%= post.id %>">
          <div class="qashdU">
            <% if logged_in? && !PostTutor.find_rated_by(current_user).include?(post.post_tutor) %>
              <%= link_to_remote post.post_tutor.total_good, { :update => "rate_#{post.id}", :url => {:controller => "post_tutors", :action => "rate", :post_id => post.id, :rating => "1" } } %>
            <% else %>
              <%= link_to post.post_tutor.total_good, "javascript:;" %>
            <% end %> 
          </div>
          <div class="qashdD">
            <% if logged_in? && !PostTutor.find_rated_by(current_user).include?(post.post_tutor) %>
              <%= link_to_remote post.post_tutor.total_bad, { :update => "rate_#{post.id}", :url => {:controller => "post_tutors", :action => "rate", :post_id => post.id, :rating => "0" } } %>
            <% else %>
              <%= link_to post.post_tutor.total_bad, "javascript:;" %>
            <% end %>
          </div>
         </div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="post_favorite_<%= post.id %>"><%= show_favorite(post) %></div>
        <div class="com"><%= link_to "Comments (#{post.comments.size})", "#" %></div>
      </div>
    </div>
  </div>
</div>
