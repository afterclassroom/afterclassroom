<div id="rate_<%= post.id %>">
                    <%
                    check = PostTutor.find_rated_by(current_user).include?(post.post_tutor) if logged_in?
                    check ||= false %>
                    <div class="qashdU">
                        <%= show_rating(post.id, post.post_tutor.total_good, get_controler_name_from_class_name(post.post_tutor.class.name), check, 1) %>
                    </div>
                    <div class="qashdD">
                        <%= show_rating(post.id, post.post_tutor.total_bad, get_controler_name_from_class_name(post.post_tutor.class.name), check, 0) %>
                    </div>
                </div>
