<% content_for :you_are_here do -%>
You are here: <a href="/">Home</a>
<%= link_to "Lecture Notes", post_lecture_notes_path, :class => "abLink-detail" %><%= link_to "Search", "#", :class => "abLink-detail" %>
<% end -%>
<% content_for :post_button do -%>
<%= render :partial => 'shared/post_button', :locals => {:new_post_path => @new_post_path} %>
<% end -%>
<% content_for :menu_sub do -%>
<%= render :partial => "submenu" %>
<% end -%>
<!--Content-->
<div class="contMainL">
    <div class="col451 QAs">
        <div class="col451in">
            <div class="col451Cont">
                <div class="AsDTop">
                    <h1 class="titleH1">Lecture Notes</h1>
                    <div class="AsDsearch">
                        <%= render :partial => "shared/search_indetail", :locals => {:url_search => search_post_lecture_notes_path} %>
                    </div>
                </div>
                <%= display_flash_messages_with_raw %>
                <!--List Items--><% @posts.each_hit_with_result do |hit, post| %>
                <%= render :partial => "item", :locals => {:post => post, :title => raw(post.title), :description => raw(hit.highlight(:description) ? hit.highlight(:description).format { |fragment| content_tag(:em, fragment) } : post.description)} %>
                <% end %>
                <!--List Items-->
                <!--Pagination-->
                <div class="assPage">
                    <span class="numPage"><%= page_entries_info @posts.results %></span>
                    <%= will_paginate @posts.results %>
                </div>
                <!--Pagination-->
                <div class="goTop">
                    <a href="javascript:;" onclick="goToByScroll('top_page')">Top</a>
                </div>
            </div>
        </div>
    </div>
</div>
