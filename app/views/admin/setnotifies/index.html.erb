<script type="text/javascript">
  var selectedTR;
  var deleteURL = '<%= delete_admin_setnotifies_path %>';

  $(document).ready(function(){
    $("tr[id*='tr_']").click(function(){

      var selectedID = $(this).find('td:eq(3)>input').attr('value');

      if (selectedTR!= undefined){
        selectedTR.css('background-color','');
      }
      selectedTR = $(this);
      $(this).css('background-color','lightBlue');

      $('#edit_noti').unbind('click');
      $('#edit_noti').click(function(){
        window.location = '<%= edit_admin_setnotifies_url %>?selectedID='+selectedID;
      });

      $('#delete_noti').unbind('click');
      $('#delete_noti').click(function(){
        var answer = confirm ("Are you sure to delete this notification?")
        if (answer){
          window.location = '<%= delete_admin_setnotifies_url %>?selectedID='+selectedID;
        }

      });


    });
  });

</script>