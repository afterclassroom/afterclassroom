<% friends = current_user.user_friends %>
<div class="col195 Fans">
  <div class="col195in">
    <div class="proTop">
      <h1 class="col195Title">Friends</h1>
      <div class="proEdit"><a href="#"> </a></div>
    </div>
    <div class="infoFans">
      <div class="infoFan"><%= friends.size %> friend(s)</div>
      <div class="seeAll"><a href="#">see all</a></div>
    </div>
    <div class="fanImg">
      <% (0..5).each do |i| %>
      <div class="fanImg1">
        <%= link_to "<div>#{image_tag friends[i].avatar.url(:thumb)}</div>", user_path(friends[i]) %>
        <div class="fanName"><%= link_to friends[i].full_name, user_path(friends[i]) %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>