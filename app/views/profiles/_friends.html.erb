<%
  friends = @user.user_friends
  f_total = friends.size
%>
<div class="col195 Fans">
  <div class="col195in">
    <div class="proTop">
      <h1 class="col195Title">Friends</h1>
      <div class="proEdit"><a href="#"> </a></div>
    </div>
    <div class="infoFans">
      <div class="infoFan"><%= f_total %> friend(s)</div>
      <div class="seeAll"><%= link_to "see all", user_friends_url %></div>
    </div>
    <div class="fanImg">
      <%
        count = 5
        count = (f_total - 1) if f_total < 6
      %>
      <% (0..count).each do |i| %>
      <div class="fanImg1">
        <%= link_to raw("<div>#{image_tag friends[i].avatar.url(:thumb)}</div>"), user_path(friends[i]) %>
        <div class="fanName"><%= link_to friends[i].full_name, user_path(friends[i]) %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>
