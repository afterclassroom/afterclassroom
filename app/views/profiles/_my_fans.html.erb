<div class="proInfG">
  <div class="proInfGL">My Fans</div>
  <div class="proInfGR"><a href="#">Edit My Fans</a></div>
</div>
<%
  fans_rc = current_user.fans_recent_update
  fans_rc_total = fans_rc.size
%>
<% if fans_rc_total > 0 %>
<div class="proInfGItem">
  <div class="proInfGLL">
    <div class="proInfGlabel">Recently Update Fans:</div>
    <div class="proInfGlink"><a href="#">See All (<%= fans_rc_total %>)</a></div>
  </div>
  <div class="proInfGRR">
    <div class="fanImg">
       <%
        count_rc = 5
        count_rc = (fans_rc_total - 1) if fans_rc_total < 6
      %>
      <% (0..count_rc).each do |i| %>
        <div class="fanImg1">
          <%= link_to "<div>#{image_tag fans_rc[i].user.avatar.url(:thumb)}</div>", user_path(fans_rc[i].user) %>
          <div class="fanName"><%= link_to fans_rc[i].user.full_name, user_path(fans_rc[i].user) %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<%
  fans_nv = current_user.fans_not_visit
  fans_nv_total = fans_nv.size
%>
<% if fans_nv_total > 0 %>
<div class="proInfGItem">
  <div class="proInfGLL">
    <div class="proInfGlabel">Have not visited over 30 days:</div>
    <div class="proInfGlink"><a href="#">See All (<%= fans_nv_total %>)</a></div>
  </div>
  <div class="proInfGRR">
    <div class="fanImg">
      <%
        count_nv = 5
        count_nv = (fans_nv_total - 1) if fans_nv_total < 6
      %>
      <% (0..count_nv).each do |i| %>
        <div class="fanImg1">
          <%= link_to "<div>#{image_tag fans_nv[i].user.avatar.url(:thumb)}</div>", user_path(fans_nv[i].user) %>
          <div class="fanName"><%= link_to fans_nv[i].user.full_name, user_path(fans_nv[i].user) %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>