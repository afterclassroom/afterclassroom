<div id="detail_window" style="background: #f1f1f1;">
  <div class="dw_title">
    <%= @post.title %>
  </div>

  <div class="dw_location">
    <%= @post.user.full_name %>, <%= @post.user.school.name %>
  </div>

  <div class="dw_datetime">
    <%= @post.created_at.strftime("%B %d, %Y") %>
  </div>
  <div class="detail-info"><!-- detail-info-->
    <div id="rsvp_alert_<%= @post.id %>" style="display:none">
      You sended RSVP.
    </div>
    <div id="rsvp_wraper_<%= @post.id %>">
      <div id="posting-section">
        <form id="form_rsvp_<%= @post.id %>" name="form_rsvp_<%= @post.id %>">
          <ul>
            <li>
              <div class="user_ri1"><label>Where:</label> <%= text_field_tag "where_#{@post.id}", "" %></div>
            </li>
            <li>
              <div class="user_ri2"><label>When:</label> <%= text_field_tag "when_#{@post.id}", "" %></div>
            </li>
            <li>
              <div class="user_ri3"><label>First Name*:</label> <%= text_field_tag "first_name_#{@post.id}", "", :class => "required", :width => "330" %></div>
            </li>
            <li>
              <div class="user_ri4"><label>Last Name*:</label> <%= text_field_tag "last_name_#{@post.id}", "", :class => "required" %></div>
            </li>
            <li>
              <div class="user_ri5"><label>Email*:</label> <%= text_field_tag "email_#{@post.id}", "", :class => "required validate-email" %></div>
            </li>
            <li>
              <div class="user_ri6"><label>Tel*:</label> <%= text_field_tag "tel_#{@post.id}", "", :class => "required" %></div>
            </li>
            <li>
              <label>Message:</label>
              <div class="user_ri7"> <%= text_area_tag "message_#{@post.id}", nil, :rows => 5, :cols => 60 %></div>
            </li>
            <li>
             
                <!-- post  button -->
                <div>
                  <span class="submitRSVP"><a href="javascript:submit_rsvp(<%= @post.id %>);" onclick="sendPSVP()">Send</a></span>
                  <span class="error" style="padding: 0px;"></span>
               </div>
                <!-- end post button -->
            
            </li>
          </ul>
        </form>
      </div>
    </div>
  </div><!-- end detail-info-->
</div>
<script language="javascript">
    function sendPSVP(){
        $("#form_rsvp_<%= @post.id %>").submit();
    }
    $().ready(function() {
        $("#form_rsvp_<%= @post.id %>").validate({
        errorLabelContainer: $("#form_rsvp_<%= @post.id %> .error")
    });
});
</script>