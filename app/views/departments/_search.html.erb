<div id="posting-section">
  <% form_for :department, @department, :html => {:id => "form", :method => :get} do |f| %>
    <fieldset>
      <legend><strong>Search</strong></legend>
      <ul>
        <li>
          <%= render :partial => "department_category", :locals => {:department_category_name => @department_category_name, :department_categories => @department_categories, :action_name => "index"} %>
        </li>
        <li><label>Department name</label>
          <div class="user_ri">
            <%= f.text_field :name %>
          </div>
        </li>
        <li>
          <div class="post_cbt">
            <!-- post  button -->
            <a href="javascript:submit()" title="Post" class="link_bt">
              <span class="ltred_l"></span>
              <span class="ltred_c btf">Search</span>
              <span class="ltred_r"></span>
            </a>
            <!-- end post button -->
          </div>
        </li>
      </ul>
      <div id="elements_store"></div>
    </fieldset>
  <% end %>
</div>
<script type="text/javascript">
  function submit(){
    Tips.hideAll();
    $$('.prototip').each(function(element){
      $('elements_store').insert(element, { position: content });
    });
    $('form').submit();
  }
</script>
