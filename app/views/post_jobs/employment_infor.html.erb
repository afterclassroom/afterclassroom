<% content_for :you_are_here do -%>
  You are here: <a href="/">Home</a><%= link_to "Jobs", post_jobs_path, :class => "abLink-detail" %><%= link_to "Employment information", "#", :class => "abLink-detail" %>
<% end -%>

<% content_for :post_button do -%>
  <%= render :partial => 'shared/post_button', :locals => {:new_post_path => @new_post_path} %>
<% end -%>

<% content_for :menu_sub do -%>
  <%= render :partial => "submenu" %>
<% end -%>

<!--Content-->
<div class="contMainL">
  <div class="col451 Book">
    <div class="col451in">
      <div class="AsDTop">
        <h1 class="titleH1">Employment information</h1>
      </div>
      <div class="col451Cont">

        <%= display_flash_messages_with_raw %>
        
        <!--List Items-->
        <% @job_infors.each do |j| %>
          <div class="assItem">
            <div class="assItemL">
              <div class="assContT" style="float:left">
                <h2 class="titleH2"><%= link_to j.title, show_job_infor_post_jobs_path(:job_infor_id => j.id) %></h2>
              </div>
              <div class="assDes"><%= truncate_words(j.description) %></div>
            </div>
            <div class="assItemB">
              <div class="assInfT">
                <div class="assInfT">
                  <div class="assInfR"><%= link_to "more", show_job_infor_post_jobs_path(:job_infor_id => j.id) %></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <!--List Items-->

        <!--Pagination-->
        <div class="assPage">
          <span class="numPage"><%= page_entries_info @job_infors %></span>
          <%= will_paginate @job_infors %>
        </div>
        <!--Pagination-->
        <div class="goTop"><a href="javascript:;" onclick="goToByScroll('top_page')">Top</a></div>
      </div>
    </div>
  </div>

</div>
