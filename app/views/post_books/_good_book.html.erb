<div class="col195 Bookgood">
  <div class="col195in">
    <h1 class="col195Title">Good Books</h1>
    <div class="col195Cont">
      <%
      good_books = PostBook.good_books(@school).with_limit
    %>
      <% if good_books.size > 0 %>
        <%
        good_books.each do |b|
        %>
          <div class="dueDItem">
            <div class="dueDTitle"><%= link_to truncate_words(b.post.title, 4), post_book_path(b) %></div>
            <div class="dueDTime"><%= b.post.user.full_name %></div>
          </div>
        <% end %>
		<% if good_books.size > LIMIT - 1 %>
        <div class="dueDbutton"><%= link_to "View more Good books", good_books_post_books_path %></div>
		<% end %>
      <% end %>
    </div>
  </div>
</div>
