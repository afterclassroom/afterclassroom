<div class="col300 Parti">
  <div class="col300in">
    <h1 class="col300Title">Ask for particular books</h1>
    <div class="col300Cont">
      <% form_for :post_book, :url => {:action => "create"}, :html =>{:multipart => true, :id => "form_post"} do |f| %>
        <%
        book_type = BookType.find_by_label("your_friends_needed_books")
      %>
        <%= hidden_field_tag("post_book[book_type_id]", book_type.id) if book_type %>
        <% fields_for :post do |p| %>
          <%= render :partial => "/shared/form_request_post/select_department", :locals => {:f => f} %>
          <%= render :partial => "/shared/form_request_post/select_school_year", :locals => {:f => f} %>
          <%= render :partial => "/shared/form_request_post/title", :locals => {:p => p} %>
          <%= render :partial => "/shared/form_request_post/description", :locals => {:p => p} %>
          <div class="reqSl">
            <div class="req40">
              <div class="reqLa"><label>Price</label></div>
              <div class="reqTi"><%= f.text_field :price %></div>
            </div>
            <div class="req60">
              <div class="reqLa"><label>Phone</label></div>
              <div class="reqTi"><%= f.text_field :phone %></div>
            </div>
          </div>
          <div class="reqSl">
            <div class="reqLa"><label>Address</label></div>
            <div class="reqTi"><%= f.text_field :address %></div>
          </div>
          <%= render :partial => "/shared/form_request_post/file", :locals => {:p => p} %>
          <%= render :partial => "/shared/form_request_post/select_tag" %>
          <div class="submit"><%= show_submit_form() %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>