<div class="col300 Parti">
  <div class="col300in">
    <h1 class="col300Title">Ask for particular books</h1>
    <div class="col300Cont">
      <% form_for :post_book, :url => {:action => "create"}, :html =>{:multipart => true, :id => "form_post"} do |f| %>
        <% fields_for :post do |p| %>
          <div class="reqTi"><%= p.text_field :title, :value => "Title..." %></div>
          <div class="reqEn"><%= text_area_tag "post[description]", "Enter your request..." %></div>
          <div class="reqSl">
            <div class="req40">
              <div class="reqLa"><label>Price</label></div>
              <div class="reqTi"><%= f.text_field :price %></div>
            </div>
            <div class="req60">
              <div class="reqLa"><label>Phone</label></div>
              <div class="reqTi"><%= f.text_field :phone %></div>
            </div>
          </div>
          <div class="reqSl">
            <div class="reqLa"><label>Address</label></div>
              <div class="reqTi"><%= f.text_field :address %></div>
          </div>
          <div id="divinputfile">
            <%= p.file_field :attach, :onchange => "$('#fakefilepc').value = this.value;", :size => "39", :class => "filepc" %>
            <div id="fakeinputfile"><input name="fakefilepc" type="text" id="fakefilepc" /></div>
          </div>
          <div class="reqLa"><label>Tags</label></div>
          <div class="reqTi"><%= text_field_tag "tag" %></div>
          <div id="recaptcha_container">
            <div class="reqLa"><label>Enter the two words below</label></div>
            <div class="reqTi"><%= text_field_tag "recaptcha_response_field" %></div>
            <div id="recaptcha_image"></div>
          </div>
          <%= recaptcha_tags(:display => {:theme => "custom"}) %>
          <div class="regReload"><a class="regRlBt" href="javascript:Recaptcha.reload();">Get new words</a></div>
          <div class="submit"><%= show_submit_form() %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>