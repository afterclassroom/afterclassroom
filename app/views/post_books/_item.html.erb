<div class="assItem">
  <div class="assItemL">
    <div class="assPic"><%= show_image_user_post(post.user) %></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to title, post_book_path(post.post_book) %></h2>
      <div class="assCate"><span>From:</span><%= link_to post.school.name, :controller => "post_books", :action => "index", :from_school => post.school, :book_type_id => post.post_book.book_type.id %></div>
    </div>
    <div class="assDes"><%= truncate_words(description) %></div>
  </div>
  <!--info-link-box-->
  <div class="asslinkdown">
    <div class="moreTutor"><%= post.post_book.address %></div>
	<div class="down">
		<% if post.attach_file_name %>
        <a href="javascript:downloadFile('<%= post.attach.url %>')" >Download</a>
      <% end %>
	 </div>
    <!--
    <div class="mySco"><a href="#">Buy now!</a></div>
    -->
  </div>
  <!--info-link-box-->
  <div class="assItemB">
    <div class="assImg"><div><%= link_to image_post_thumb(controller.controller_name, post), post.post_book %></div></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= show_user_post(post.user) %></div>
        </div>
      </div>
      <div class="assInfB">
        <div id="rate_<%= post.id %>">
          <%
            check = PostAwareness.find_rated_by(current_user).include?(post.post_awareness) if logged_in?
            check ||= false
          %>
          <div class="qashdU">
            <%= show_rating(post.id, post.post_book.total_good, controller.controller_name, check, 1) %>
          </div>
          <div class="qashdD">
            <%= show_rating(post.id, post.post_book.total_bad, controller.controller_name, check, 0) %>
          </div>
        </div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="item_favorite_<%= post.id %>"><%= show_favorite("Post", post) %></div>
        <div class="com"><%= link_to raw("Comments (<span id='post_#{post.id}_comments'>#{post.comments.size}</span>)"), "javascript:;", :onclick => "showListPostComment(#{post.id})" %></div>
      </div>
    </div>
  </div>
</div>
