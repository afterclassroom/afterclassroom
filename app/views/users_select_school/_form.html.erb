<div style="position: absolute;margin-left: 112px;margin-top: -32px">
  <div style="width:75px;float:left;margin-left: 13px;" class="popupCoun"><%= radio_button_tag "school_type", "University", (@type_school == "University"), :onchange => "select_type_school();" %><span style="position: absolute;margin-top: -1px">University</span></div>
  <div style="width:75px;float:left;margin-left: 2px;" class="popupCoun"><%= radio_button_tag "school_type", "College", (@type_school == "College"), :onchange => "select_type_school();" %><span style="position: absolute;margin-top: -1px">College</span></div>
  <div style="width:170px;margin-left: -7px;" class="popupCoun"><%= radio_button_tag "school_type", "HighSchool", (@type_school == "HighSchool"), :onchange => "select_type_school();" %><span style="position: absolute;margin-top: -1px">Elementary & High School</span></div>
</div>
<div class="popupItem">
  <%= form_tag('', :id => 'select_school_form') do %>
    <div class="popupL">
      <div class="popupNumb">1</div>
      <div class="popupCoun">Country</div>
      <div class="popupSelect">
        <input type="text" name="country" id="country" value="<%= @country.id %>" disabled="disabled"/>
      </div>
    </div>
    <div class="popupR">
      <div class="popupNumb">2</div>
      <div class="popupCoun">State</div>
      <div class="popupSelect">
        <input type="text" name="state" id="state" value="<%= @state.id %>" disabled="disabled"/>
      </div>
    </div>
    <div class="popupItemCe" style="height: 30px"></div>
    <div class="popupL">
      <div class="popupNumb">3</div>
      <div class="popupCoun">City</div>
      <div class="popupSelect">
        <input type="text" name="city" id="city" value="<%= @city.id %>" disabled="disabled"/>
      </div>
    </div>
    <div class="popupR">
      <div class="popupNumb">4</div>
      <div class="popupCoun">School</div>
      <div class="popupSelect">
        <input type="text" name="school" id="school" value="<%= @school.id if @school %>" disabled="disabled"/>
      </div>
    </div>
  <% end %>
</div>
<div class="filter">Filter your school by alphabets</div>
<div class="popupAl" id="list_alphabet">
  <%= link_to_function "All", "select_alphabet('')", :class => "#{"selected" if @alphabet == ""}" %>
  <% ('A'..'Z').each do |a| %>
    <%= link_to_function a.to_s, "select_alphabet('#{a.to_s}')", :class => "#{"selected" if @alphabet == a}" %>
  <% end %>
</div>
<div class="popupBtm"><a href="javascript:;" onclick="select_school();">Select</a></div>

<%= render :partial => "list" %>
