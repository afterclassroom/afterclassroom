<ul id="country_menu" class="mcdropdown_menu">
  <% @countries.each do |c| %>
    <li rel_country="<%= c.id %>">
      <%= c.name %>
    </li>
  <% end %>
</ul>
<ul id="state_menu" class="mcdropdown_menu">
	<% if @states.size > 0 %>
		<% @states.each do |s| %>
		  <li rel_state="<%= s.id %>">
		    <%= s.name %>
		  </li>
		<% end %>
	<% else %>
		<li rel_state="">
      No State
    </li>
	<% end %>
</ul>
<ul id="city_menu" class="mcdropdown_menu">
	<% if @cities.size > 0 %>
		<% @cities.each do |ct| %>
		  <li rel_city="<%= ct.id %>">
		    <%= ct.name %>
		  </li>
		<% end %>
	<% else %>
		<li rel_city="">
      No City
    </li>
	<% end %>
</ul>
<ul id="school_menu" class="mcdropdown_menu">
  <% if @schools.size > 0 %>
    <% @schools.each do |sc| %>
      <li rel_school="<%= sc.id %>">
        <%= sc.name %>
      </li>
    <% end %>
  <% else %>
    <li rel_school="">
      No School
    </li>
  <% end %>
</ul>

<script>
  $(document).ready(function() {
    $('#country_menu,#state_menu,#city_menu,#school_menu').hover(function() {
      $(this).stop().show();
    }, function() {
      $(this).stop().hide();
    });
    $('.popupL.popupR,.popupItemCe,.popupNumb,.popupCoun,.top_area').hover(function() {
    }, function() {
      $('#country_menu,#state_menu,#city_menu,#school_menu').stop().hide();
    });
  });
</script>
