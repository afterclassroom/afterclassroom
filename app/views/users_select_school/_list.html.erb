<ul id="country_menu" class="mcdropdown_menu">
    <% @countries.each do |c| %>
      <li rel_country="<%= c.id %>">
        <%= c.name %>
      </li>
    <% end %>
</ul>

<ul id="state_menu" class="mcdropdown_menu">
  <% @states.each do |s| %>
    <li rel_state="<%= s.id %>">
      <%= s.name %>
    </li>
  <% end %>
</ul>
<ul id="city_menu" class="mcdropdown_menu">
  <% @cities.each do |ct| %>
    <li rel_city="<%= ct.id %>">
      <%= ct.name %>
    </li>
  <% end %>
</ul>
<ul id="school_menu" class="mcdropdown_menu">
  <% if @schools.size > 0 %>
    <% @schools.each do |sc| %>
      <li rel_school="<%= sc.id %>">
        <%= sc.name %>
      </li>
    <% end %>
  <% else %>
    <li rel_school="">
      No School
    </li>
  <% end %>
</ul>

<style>
  .nav01{
    position: fixed;
    top:45%;
    background-color: #E1E0E0;
    width: 187px;
    cursor: pointer;
  }
  .country_menu01{
    background-color: #ffffff;
    padding-top: 0px;
    margin-top: 2px;
  }
</style>



