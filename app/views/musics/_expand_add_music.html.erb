<div id="add_music" style="display:none">
  <% form_for :music, :html => {:id => "form_music", :name => "form_music", :multipart => true } do |f| %>
    <div class="photoEx">
      <div class="stoExItem">
        <div class="stoExItemL">music album</div>
        <div class="stoExItemR" id="select_music_album">
          <%= f.select :music_album_id, @music_albums.collect {|m| [m.name, m.id]}, {}, {:style => "width:250px"} %>
        </div>
      </div>
      <div class="stoExItem">
        <div class="stoExItemL">Location</div>
        <div class="stoExItemR">
          <div class="phoExIn">
            <div>
              <input type="text" style="width: 170px;" name="attach_file" class="required"/>
              <div class="spanButtonPlace">
                <span></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="stoExBtm">
        <div class="stoExCre"><a href="javascript:;" onclick="$('#form_music').submit();">Add music</a></div>
        <div class="stoExCan"><a href="javascript:;" onclick="$('#take_a_picture').toggle('slow');">Cancel</a></div>
      </div>
    </div>

  <% end %>
