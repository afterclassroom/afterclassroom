<%
arr_user_id = []
arr_user_id << current_user.id
if current_user.user_friends
  current_user.user_friends.each do |friend|
    arr_user_id << friend.id
  end
end
u = arr_user_id.join(", ")
most_viewed_musics = Music.with_users(u).with_limit.most_view
%>

<div class="col300 slStory">
  <div class="col300in mostMS">
    <h1 class="col300Title">Most viewed musics</h1>
    <% most_viewed_musics.each do |music| %>
    <div class="msItem">
      <div class="photoImg"><%= link_to "<div>#{image_tag music.music_album.music_album_attach.url(:thumb)}</div>", user_music_path(current_user, music) %></div>
      <div class="mostMSR">
        <div class="mostMStitle"><%= link_to music.title, user_music_path(current_user, music) %></div>
        <div class="mostMStime"><%= music.convert_seconds_to_time %></div>
        <div class="mostMSA"><a href="#" class="mostMSPlay"> </a><a href="#" class="mostMSadd"> </a></div>
      </div>
    </div>
    <% end %>
  </div>
</div>