<% content_for :menu_top_student_lounge do -%>
<%= render :partial => '/shared/submenu' %>
<% end -%>
<div class="slStoryL">
    <div class="contDetL">
        <div class="contDetLin">
            <div class="inboxLeft">
                <div class="slsShare">
                    <div class="slsShareL">
                        Post your music
                    </div>
                </div>
                <%= display_flash_messages_with_raw %>
                <div class="postCont">
                    <%= form_for @music, :url => user_musics_path(current_user), :html => {:id => "form", :name => "form", :multipart => true } do |f| %>
                    <div class="postItem">
                        <div class="postTit">
                            Music album*
                        </div>
                        <div class="postInp">
                            <% if @music_albums.size > 0 %>
                            <%= f.select :music_album_id, @music_albums.collect {|p| [p.name, p.id]}, {}, {:style => "width:250px"} %>
                            <% end %>
                        </div>
                    </div>
                    <div class="postTitt">
                        Location
                    </div>
                    <div class="postItemA">
                        <div id="divinputfile" style="margin-left:120px">
                            <div class="postItemC">
                                <%= file_field_tag "music[music_attach]", :id => "music_music_attach", :onchange => "$('#fakefilepc').val(this.value);", :size => "27", :style => "height:24px;", :class => "filepc" %>
                            </div>
                            <div class="postUpfile">
                                <div id="fakeinputfile">
                                    <input name="fakefilepc" type="text" id="fakefilepc" style="margin-top:-3px;" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="stoExBtm">
                        <div class="stoExCre" style="margin-left:107px;margin-bottom: 15px;margin-top: -2px;">
                            <a href="javascript:;" onclick="submit();">Add music</a>
                        </div>
                        <div class="stoExCan" style="margin-top: -2px;">
                            <%= link_to "Cancel", user_musics_path(current_user) %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contMainR">
    <!--Most Viewed-->
    <%= render :partial => "most_viewed" %>
    <!--Most Viewed-->
    <!--Ads-->
    <%= render :partial => "ads/show_vertical_ads" %>
    <!--Ads-->
</div>
<script type="text/javascript">
    function submit(){
        $("#form").submit();
    }
    
    $().ready(function(){
        $("#form").validate({
            errorLabelContainer: $("#form div.stoError")
        });
    });
</script>
