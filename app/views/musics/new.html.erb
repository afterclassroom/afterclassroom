<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => '/shared/submenu' %>
<% end -%>

<div class="slStoryL">
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div class="slsShare">
          <div class="slsShareL">Post your music</div>
        </div>
        <%= display_flash_messages %>
        <div id="take_a_picture" >
          <% form_for @music, :url => user_musics_path(current_user), :html => {:id => "form", :name => "form", :multipart => true } do |f| %>
            <div class="musicEx">
              <div class="stoExItem">
                <div class="stoExItemL">Music album</div>
                <div class="stoExItemR" id="select_music_album">
                  <% if @music_albums.size > 0 %>
                    <%= f.select :music_album_id, @music_albums.collect {|p| [p.name, p.id]}, {}, {:style => "width:250px"} %>
                  <% end %>
                </div>
              </div>
              <div class="stoExItem">
                <div class="stoExItemL">Location</div>
                <div class="stoExItemR">
                  <div id="divinputfile" style="width:252px">
                    <%= f.file_field :music_attach, :onchange => "$('#fakefilepc').val(this.value);", :class => "filepc required" %>
                    <div id="fakeinputfile"><input type="text" id="fakefilepc" name="fakefilepc" style="width:181px"/></div>
                  </div>
                </div>
              </div>
              <div class="stoExBtm">
                <div class="stoExCre"><a href="javascript:;" onclick="$('#form').submit();">Add music</a></div>
                <div class="stoExCan"><%= link_to "Cancel", user_musics_path(current_user) %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="contMainR">
  <!--Most Viewed-->
  <%= render :partial => "most_viewed" %>
  <!--Most Viewed-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>

<script type="text/javascript" >
  function submit(){
    $("#form").submit();
  }
  $().ready(function() {
    $("#form").validate({
      errorLabelContainer: $("#form div.stoError")
    });
  });
</script>
