<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => 'submenu' %>
<% end -%>

<div class="slStoryL">
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div class="slsShare">
          <div class="slsShareL">Musics</div>
          <div class="slsShareR">
            <%= render :partial => "menu" %>
          </div>
        </div>
        <%= display_flash_messages %>
        <%= render :partial => "expand_add_music" %>
        <%= render :partial => "expand_create_music_album" %>
        <div id="friend_musics_list">
          <div class="slsTop">
            <div class="slsTopL">
              <div class="slsTopLT">Friends shared musics</div>
              <div class="slsTopLB friLeft">
                <div class="search">
                  <% form_tag friend_m_user_musics_path(current_user), {:id => "friend_musics_search", :method => "GET"} do %>
                    <div class="textS"><%= text_field_tag "search[name]", "" %></div>
                    <div class="btmS"><a href="javascript:;" onclick="searchFriendMusics();"><img src="/images/iconSF.png"/></a></div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="slsTopR">
              <!--Pagination-->
              <div class="assPage friend_musics">
                <span class="numPage"><%= page_entries_info @friend_musics %></span>
                <%= will_paginate @friend_musics %>
              </div>
              <!--Pagination-->
            </div>
          </div>
          <div class="musicRow">
            <% @friend_musics.each do |f_m| %>
              <%= render :partial => "item_friend_music", :locals => {:music => f_m}  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="contDetL">
    <div class="contDetLin">
      <div class="inboxLeft">
        <div id="my_musics_list">
          <div class="slsTop">
            <div class="slsTopL">
              <div class="slsTopLT">Your musics</div>
              <div class="slsTopLB friLeft">
                <div class="search">
                  <% form_tag my_m_user_musics_path(current_user), {:id => "my_musics_search", :method => "GET"} do %>
                    <div class="textS"><%= text_field_tag "search[name]", "" %></div>
                    <div class="btmS"><a href="javascript:;" onclick="searchMyMusics();"><img src="/images/iconSF.png"/></a></div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="slsTopR">
              <!--Pagination-->
              <div class="assPage friend_musics">
                <span class="numPage"><%= page_entries_info @my_musics %></span>
                <%= will_paginate @my_musics %>
              </div>
              <!--Pagination-->
            </div>
          </div>
          <div class="musicRow">
            <% @my_musics.each do |m_m| %>
              <%= render :partial => "item_my_music", :locals => {:music => m_m}  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="contMainR">
  <!--Most Viewed-->
  <%= render :partial => "most_viewed" %>
  <!--Most Viewed-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>

<script type="text/javascript" >
  function submit(){
    $("#form_new").submit();
  }
  $().ready(function() {
    $("#form_new").validate({
      errorLabelContainer: $("#form_new div.stoError")
    });
  });

  formatLinkForPaginationURLFriendMusic();
  formatLinkForPaginationURLMyMusic();
</script>