<%= javascript_include_tag 'drplayer.js' %>
<%= stylesheet_link_tag 'drplayer.css' %>



<div id="playlist_<%= @music.id %>">
        <div href="<%= @music.music_attach.url %>" style="width: 400px;" class="item">
            <div>
                <div class="fr duration"><%= @music.length_in_seconds %></div>
                <div class="btn play"></div>
                <div class="title"><b><%= @music.music_attach_file_name %></b> </div>
            </div>
            <div class="player inactive"></div>
        </div>
  
    </div>

  

    <a href="javascript:void(0);" onClick="$('#playlist_<%= @music.id %>').playlist('prev');">Prev</a>
    <a href="javascript:void(0);" onClick="$('#playlist_<%= @music.id %>').playlist('next');">Next</a>

    <a href="javascript:void(0);" onClick="$('#playlist_<%= @music.id %>').playlist('pause');">Pause</a>
    <a href="javascript:void(0);" onClick="$('#playlist_<%= @music.id %>').playlist('play');">Play</a>
<script type="text/javascript">
  $(document).ready(function() {
  $("#playlist_<%= @music.id %>").playlist(
  {
  playerurl: "/swfs/drplayer.swf"
  }
  );
  });
</script>
