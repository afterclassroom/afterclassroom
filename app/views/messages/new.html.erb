<% content_for :menu_top_student_lounge do -%>
  <%= render :partial => 'shared/sl_submenu_setting' %>
<% end -%>

<div class="contDetL">
  <div class="contDetLin">
    <div class="inboxLeft">
      <% form_for @message, :url => user_messages_path(@user), :id => "message_form" do |f| %>
        <div class="inboxTitle">Compose message</div>
        <div class="inboxTop">
          <div class="compSent"><%= link_to "Send", "javascript:;", :onclick => "$('#message_form').submit();" %></div>
          <div class="compCancel"><%= link_to "Cancel", user_messages_path(@user) %></div>
        </div>
        <div class="compTop2">
          <div class="compTo">
            <div class="compLabel">To:</div>
            <div class="compInput"><input type="text" name="Text1"/></div>
          </div>
          <div class="compSub">
            <div class="compLabel">Subject:</div>
            <div class="compInput"><%= f.text_field :subject %></div>
          </div>
        </div>
        <div class="compCont">
          <%= f.text_area :body %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="contMainR">
  <!--Menu-->
  <%= render :partial => "menu_right" %>
  <!--Menu-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>

