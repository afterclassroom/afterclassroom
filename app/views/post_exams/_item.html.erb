<div class="assItem">
  <div class="assItemL">
    <div class="assImg"><div><%= link_to image_post_thumb(controller.controller_name, post), post %></div></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to title, post_exam_path(post) %></h2>
      <div class="assCate"><span>From:</span><%= link_to post.school.name, :controller => "post_exams", :action => "index", :from_school => post.school %></div>
    </div>
    <div class="assDes"><%= truncate_words(description) %></div>
  </div>
  <!--info-link-box-->
  <div class="asslinkdown">
    <div class="morelink"><%= link_to "More like this", :controller => "post_exams", :action => "index", :more_like_this_id => post %></div>
    <div class="down"><% if post.attach_file_name %>
        <a href="javascript:downloadFile('<%= post.attach.url %>')" >Download</a>
      <% end %></div>
  </div>
  <!--info-link-box-->
  <div class="assItemB">
    <div class="assPic"><%= show_image_user_post(post.user) %></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= show_user_post(post.user) %></div>
          <div><span>Comments:</span><%= "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}" %></div>
        </div>
        <div class="assInfR"><%= link_to "more", post_exam_path(post) %></div>
      </div>
      <div class="assInfB">
        <div><%= post.created_at.strftime("%I:%M %p %Z") %></div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="item_favorite_<%= post.id %>"><%= show_favorite("Post", post) %></div>
        <div class="com"><%= link_to "Comments (#{post.comments.size})", "#" %></div>
      </div>
    </div>
  </div>
</div>
