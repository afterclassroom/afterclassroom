<div class="col195 dueDate">
  <div class="col195in">
    <h1 class="col195Title">Due date</h1>
    <div class="col195Cont">
      <%
      exams_due_date = PostExam.with_school(@school).due_date.with_limit
    %>
      <% if exams_due_date.size > 0 %>
        <%
        exams_due_date.each do |tst|
        %>
          <div class="dueDItem">
            <div class="dueDTitle"><%= link_to truncate_words(tst.post.title, 4), post_exam_path(tst) %></div>
            <div class="dueDTime"><%= tst.due_date.strftime("%B %d, %Y")%></div>
          </div>
        <%
        end
      %>
        <div class="dueDbutton"><%= link_to "View more Due Date", due_date_post_exams_path %></div>
      <%
      end
    %>
    </div>
  </div>
</div>
