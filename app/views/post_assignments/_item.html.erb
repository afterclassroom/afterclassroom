<div class="assItem">
					<div class="assItemL">
						<div class="assImg"><div><%= link_to image_tag("noimg.png"), post %></div></div>
						<div class="assContT">
							<h2 class="titleH2"><%= link_to post.title, post_assignment_path(post) %></h2>
							<div class="assCate"><span>Category:</span><%= link_to post.post_category.name, "#" %></div>
							<div class="assCate"><span>From:</span><%= link_to post.school.name, "#" %></div>
						</div>
						<div class="assDes"><%= truncate_words(post.description) %></div>
					</div>
          <!--info-link-box-->
					<div class="asslinkdown">
            <div class="morelink"><a href="?more_like_this_id=<%= post.id %>" title="">More like this</a></div>
            <div class="down"><% if post.allow_download && post.attach_file_name %>
              <a href="javascript:downloadFile('<%= post.attach.url %>')" >Download</a>
            <% end %></div>
          </div>
          <!--info-link-box-->
					<div class="assItemB">	
						<div class="assPic"><div><%= link_to image_tag(post.user.avatar.url(:thumb)), {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div></div>
						<div class="assInfT">
							<div class="assInfT">
								<div class="assInfL">
									<div><span>Posted by:</span><%= link_to post.user.full_name, {:controller => "profile", :action => "show_profile", :id => post.user.id} %></div>
									<div><span>Comments:</span><%= link_to "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}", "#" %></div>
								</div>
								<div class="assInfR"><%= link_to "more", post_assignment_path(post) %></div>
							</div>
							<div class="assInfB">
								<div><a href="#"><%= post.created_at.strftime("%I:%M %p %Z") %></a></div>
								<div class="vie"><%= link_to "View (#{post.count_view})", "#" %></div>
								<div class="fav"><%= link_to "Favorite (#{post.favorites.size})", "#" %></div>
								<div class="com"><%= link_to "Comments (#{post.comments.size})", "#" %></div>
							</div>
						</div>
					</div>
				</div>