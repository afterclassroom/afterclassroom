<% cache "interesting_#{@class_name}_#{@school}" do %>
<div class="col195 intPro">
  <div class="col195in">
    <h1 class="col195Title">Interesting Tests</h1>
    <div class="col195Cont">
      <%#  interesting_tests = PostTest.with_school(@school).interesting.with_limit %>
      <%  interesting_tests = PostTest.recent_interesting(@school).first(LIMIT) %>
      <% if interesting_tests.size > 0 %>
        <% interesting_tests.each do |post| %>
          <div class="dueDItem">
            <div class="dueDTitle"><%= link_to truncate_words(post.title, 4), post_test_path(post.post_test) %></div>
            <div class="dueDTime"><%= post.created_at.strftime("%B %d, %Y")%></div>
          </div>
        <% end %>
        <% if interesting_tests.size > LIMIT - 3 %>
          <div class="dueDbutton"><%= link_to "View more Interesting Tests", interesting_post_tests_path %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>