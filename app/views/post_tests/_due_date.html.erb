<div class="col195 dueDate">
  <div class="col195in">
    <h1 class="col195Title">Due date</h1>
    <div class="col195Cont">
      <%
      tests_due_date = PostTest.with_school(@school).due_date.with_limit
    %>
      <% if tests_due_date.size > 0 %>
        <%
        tests_due_date.each do |tst|
        %>
          <div class="dueDItem">
            <div class="dueDTitle"><%= link_to truncate_words(tst.post.title, 4), post_test_path(tst.post) %></div>
            <div class="dueDTime"><%= tst.due_date.strftime("%B %d, %Y")%></div>
          </div>
        <%
        end
      %>
        <% if tests_due_date.size > 5 %>
          <div class="dueDbutton"><%= link_to "View more Due Date", due_date_post_tests_path %></div>
        <%
        end
      %>
      <%
      end
    %>
    </div>
  </div>
</div>