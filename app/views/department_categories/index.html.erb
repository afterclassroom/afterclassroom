<% content_for :header do -%>
	Department Categories
<% end -%>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for department_category in @department_categories %>
  <tr>
    <td><%=h department_category.name %></td>
    <td><%= link_to 'Show', department_category %></td>
    <td><%= link_to 'Edit', edit_department_category_path(department_category) %></td>
    <td><%= link_to 'Destroy', department_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New department_category', new_department_category_path %>
