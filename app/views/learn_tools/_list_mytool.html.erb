<script type="text/javascript">
  function ShowFavoriteAjaxLoader(place_holder){
    $(place_holder).before('<%= show_ajax_loader("holder_place", "background: white;  position: absolute;  width: 18px;") %>');
  }
  
  function AddToFavorite(mytool_id,place_of_ajax_loader){
    ShowFavoriteAjaxLoader('#checkbox_'+place_of_ajax_loader);
    var add_url = "<%= add_favorite_user_learn_tools_path(current_user) %>";
    $.ajax({
      url: add_url,
      data: {
        str_mytool_id: mytool_id
      },
      type: "GET",
      dataType: "html",
      failure: function(msg){
        $('#holder_place').remove();
        alert('Failed to communicate with server:' + msg);
      },
      success: function(msg){
        $('#holder_place').remove();
      }
    });
  }  
</script>
