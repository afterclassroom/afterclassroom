<div class="assItem">
  <div class="assItemL">
    <div class="assImg"><div><%= link_to image_post_thumb(controller.controller_name, post), post.post_housing %></div></div>
    <div class="assContT">
      <h2 class="titleH2"><%= link_to post.title, post_housing_path(post.post_housing) %></h2>
      <div class="assCate"><span>From:</span><%= link_to post.school.name, :controller => "post_housings", :action => "index", :from_school => post.school, :housing_category_id => @housing_category_id %></div>
    </div>
    <div class="assDes"><%= truncate_words(post.description) %></div>
  </div>
  <div class="asslinkdown">
    <div class="morehousing"><%= post.school.address %></div>
    <div class="mySco"><a href="#">View map</a></div>
  </div>
  <div class="assItemB">
    <div class="assPic"><%= show_image_user_post(post.user) %></div>
    <div class="assInfT">
      <div class="assInfT">
        <div class="assInfL">
          <div><span>Posted by:</span><%= show_user_post(post.user) %></div>
          <div><span>Comments:</span><%= "#{post.user.comments.size} Comment#{"s" if post.user.comments.size > 1}" %></div>
        </div>
        <div class="assInfR"><%= link_to "more", post_housing_path(post.post_housing) %></div>
      </div>
      <div class="assInfB">
        <div id="rate_<%= post.id %>">
          <%
            check = PostHousing.find_rated_by(current_user).include?(post.post_housing) if logged_in?
            check ||= false
          %>
          <div class="qashdU">
            <%= show_rating(post.id, post.post_housing.total_good, controller.controller_name, check, 1) %>
          </div>
          <div class="qashdD">
            <%= show_rating(post.id, post.post_housing.total_bad, controller.controller_name, check, 0) %>
          </div>
        </div>
        <div class="vie"><%= "View (#{post.count_view})" %></div>
        <div class="fav" id="item_favorite_<%= post.id %>"><%= show_favorite("Post", post) %></div>
        <div class="com"><%= link_to "Comments (#{post.comments.size})", "#" %></div>
      </div>
    </div>
  </div>
</div>
