<% content_for :header do -%>
	Job types
<% end -%>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for job_type in @job_types %>
  <tr>
    <td><%=h job_type.name %></td>
    <td><%= link_to 'Show', job_type %></td>
    <td><%= link_to 'Edit', edit_job_type_path(job_type) %></td>
    <td><%= link_to 'Destroy', job_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New job_type', new_job_type_path %>
