<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <%= csrf_meta_tag %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <title>:: <%= configatron.site_name %>::</title>
    <%= include_stylesheets :student_lounge %>
    <%= include_javascripts :student_lounge %>
    <%= feedback_includes %>
    <%= feedback_tab(:position => 'left') %>
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="https://chat.afterclassroom.com/application.js" type="text/javascript" charset="utf-8"></script>


    <!-- BEGIN: library for photo-tag -->
    <link media="screen" type="text/css" href="/stylesheets/jquery-ui-1.8.11.custom.css" rel="stylesheet"/>
    <link media="screen" type="text/css" href="/stylesheets/styles2.css" rel="stylesheet"/>
    <link media="screen" type="text/css" href="/stylesheets/qunit.css" rel="stylesheet"/>
    <link media="screen" type="text/css" href="/stylesheets/blackbird.css" rel="stylesheet"/>
    <script type="text/javascript" src="/javascripts/jquery.dev.1.5.1.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.ui.1.8.11.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.phototag.test.js"></script>
    <script type="text/javascript" src="/javascripts/blackbird.js"></script>
    <script type="text/javascript" src="/javascripts/qunit.js"></script>    
    <!-- END: library for photo-tag -->

  </head>
  <body>
    <div class="after_main">
      <div class="top" id="top_page">
        <div class="banner">
          <div class="logo">
            <a href="/"><img alt="classroom" src="/images/logo.png" /></a>
          </div><% if logged_in? %>
            <%= render :partial => 'shared/login_sl' %>
          <% else %>
            <%= render :partial => 'shared/login' %>
          <% end %>
        </div>
      </div>
      <div class="menu">
        <div class="menuFriend">
          <% if logged_in? %>
            <%= render :partial => 'shared/menu_main_sl' %>
          <% else %>
            <%= render :partial => 'shared/menu_main' %>
          <% end %>
        </div>
      </div>
      <%= yield_or_default(yield(:menu_top_student_lounge)) %>
      <div class="contMain">
        <%= yield %>
      </div>
      <%= render :partial => "shared/post_comments/alert" %>
      <%= render :partial => 'shared/javascript_load' %>
      <%= render :partial => 'shared/footer' %>
      <%= render :partial => 'shared/footer_menu_in' if logged_in? %>
      <%= render :partial => 'shared/notification' if logged_in? %>
    </div>
  </body>
</html>
