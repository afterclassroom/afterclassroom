<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

    <title>:: <%= configatron.site_name %> ::</title>

    <%= stylesheet_link_merged :student_louge %>
    <%= javascript_include_merged :student_louge %>
		<%= javascript_include_tag :juggernaut %>

  </head>
  <body onload="mydows_init();">
    <div id="wrapper"><!-- begin wrapper -->
      <div id="header"><!-- header -->
        <div id="top-nav"><!-- top nav -->
          <%= render :partial => 'shared/global_links' %>
        </div><!-- end top nav -->
        <div id="logo"><!-- logo -->
          <%= link_to "<h3></h3>", "/" %>
        </div><!-- end logo -->
        <div id="main-nav"><!-- main nav -->
          <%= render :partial => 'shared/tabs' %>
        </div><!-- end main nav-->
        <div id="top-search">
          <%= yield_or_default(yield(:search)) %><span>&nbsp;</span>
        </div>
      </div>

      <div class="toggle-search">
        <%= yield_or_default(yield(:select_your_school)) %><span>&nbsp;</span>
      </div>
      
      <div id="content"><!-- begin content -->
        <%= yield_or_default(yield(:tabs_inbox)) %>
        <%= yield %>
        <div id="right">
          <%= yield_or_default(yield(:sidebar)) %>
        </div>
      </div>
      <div id="footer">
        <%= render :partial => 'shared/footer' %>
      </div>

    </div><!-- end wrapper -->

  </body>
</html>
