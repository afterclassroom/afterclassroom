<% content_for :menu_top_student_lounge do -%>
<%= render :partial => '/shared/submenu' %>
<% end -%>
<div class="slStoryL">
    <div class="contDetL">
        <div class="contDetLin">
            <div class="inboxLeft">
                <div class="slsShare">
                    <div class="slsShareL">
                        Music Albums
                    </div>
                    <div class="slsShareR">
                        <%= render :partial => "menu_show" %>
                    </div>
                </div>
                <%= display_flash_messages_with_raw %>
                <div id="create_a_album" style="display:none;">
                    <%= render :partial => "musics/widget_form" %>
                </div>
                <div id="my_musics_list">
                    <div class="slsTop">
                        <div class="slsTopLT">
                            <%= @music_album.name %>
                        </div>
                        <div class="musicRow" id="mytable">
                            <% @musics.each do |m_p| %>
                            <%= render :partial => "item_my_music", :locals => {:music => m_p} %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contMainR">
    <!--Most Viewed-->
    <%= render :partial => "musics/most_viewed" %>
    <!--Most Viewed-->
    <!--Ads-->
    <%= render :partial => "ads/show_vertical_ads" %>
    <!--Ads-->
</div>
<%= render :partial => "action_music_box_menu" %>
<script type="text/javascript" charset="utf-8">
  $(function(){
		$('#create_bt').hide();
		$('#start_uploads').show();
		$('#music_music_album_id').val('<%= @music_album.id %>');
});
</script>
