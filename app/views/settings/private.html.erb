<script>
	$(document).ready(function(){
		$('.menuPrivate').change(function()
		{
		   share_select($(this).attr('value'), $(this).attr('id'));
		});
	});
	
	function share_select(val, tp) { 
		$.ajax({
			url: '<%= save_private_setting_user_settings_path(current_user) %>',
            type: 'POST',
            cache: false,
            dataType: 'html',
            data: ({
                type : tp,
                value : val
            }),
            success: function(data){
                $('#' + tp + '_share_status').html(data);
            }
        });
	};
</script>
