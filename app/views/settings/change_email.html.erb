<div class="postCont" id="div_send_report">
    <form id="editeMail" action="<%= save_email_user_settings_path(current_user) %>">
        <div class="postItem">
            <div class="postItem1" style="width: 205px">
                Please enter a new email address *
            </div>
            <div class="postInp">
                <input type="text" style="width:270px;" value="" id="changed_value" name="changed_value" class="required email"/>
            </div>
        </div>
        <div class="submit" style="padding-left: 215px ;">
            <a href="javascript:;" onclick="sendChange()">Send</a>
        </div>
        <div class="error" style="padding: 10px">
        </div>
    </form>
</div>
<script language="javascript">
    function sendChange(){
        $("#editeMail").submit();
    }
    
    $().ready(function(){
        $("#editeMail").validate({});
    });
</script>
