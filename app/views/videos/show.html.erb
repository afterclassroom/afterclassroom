<% content_for :search do -%>
  <%= render :partial => 'shared/search_inbox', :locals => {:search_name => @search_name, :type_name => "Videos", :action_path => "#{videos_path}"} %>
<% end -%>

<% content_for :tabs_inbox do -%>
  <%= render :partial => 'shared/tabs_inbox' %>
<% end -%>

<p>
  <b>User:</b>
  <%=h @video.user.full_name %>
</p>

<p>
  <b>Video album:</b>
  <%=h @video.video_album.name %>
</p>

<p>
  <b>Title:</b>
  <%=h @video.title %>
</p>

<p>
  <b>Description:</b>
  <%=h @video.description %>
</p>

<p>
  <b>Who can see:</b>
  <%=h @video.who_can_see %>
</p>

<%= image_tag @video.video_attach.url(:medium) %>
<%= link_to 'Edit', edit_video_path(@video) %> |
