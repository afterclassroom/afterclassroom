<% content_for :search do -%>
  <%= render :partial => 'shared/search_inbox', :locals => {:search_name => @search_name, :type_name => "Videos", :action_path => "#{videos_path}"} %>
<% end -%>

<% content_for :tabs_inbox do -%>
  <%= render :partial => 'shared/tabs_inbox' %>
<% end -%>

<h1>Listing videos</h1>

<table>
  <tr>
    <th>Video album</th>
    <th>Title</th>
    <th>Description</th>
    <th>Who can see</th>
  </tr>

<% for video in @videos %>
  <tr>
    <td><%=h video.video_album.name %></td>
    <td><%=h video.title %></td>
    <td><%=h video.description %></td>
    <td><%=h video.who_can_see %></td>
    <td><%= link_to 'Show', video %></td>
    <td><%= link_to 'Edit', edit_video_path(video) %></td>
    <td><%= link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New video', new_video_path %>
