<div class="postCont">
    <%= form_for [current_user, @video], :html => {:id => "form", :name => "form", :multipart => true } do |f| %>
    <div class="postItem">
        <div class="postTit">
            Category*
        </div>
        <div class="postInp">
            <%= f.select :category, @categories %>
        </div>
    </div>
    <div class="postItem">
        <div class="postTit">
            Title*
        </div>
        <div class="postInp">
            <%= f.text_field :title, :style => "width:360px", :class => "{validate:{required:true}}" %>
        </div>
    </div>
    <div class="postItem">
        <div class="postTit">
            Description
        </div>
        <div class="postInp">
            <%= f.text_area :description %>
        </div>
    </div>
    <div class="postItem">
        <div class="postTit">
            Tag line
        </div>
        <div class="postInp">
            <%= text_field_tag 'tag_list', "", :style => "width:360px" %>
        </div>
    </div>
    <div class="stoExBtm">
        <div class="stoExCre">
            <a href="javascript:;" onclick="submit();">Update video</a>
        </div>
    </div>
    <% end %>
</div>
<script type="text/javascript">
    function submit(){
        var result = $("#form").validate({
            meta: "validate"
        });
        if (result) {
            $("#form").submit();
        }
    }
</script>
