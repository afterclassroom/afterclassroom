<div class="col195 student195">
  <div class="col195in">
    <h1 class="col195Title">Exam/Test Schedules</h1>
    <div class="col195Cont">
      <%
      type = "exam_schedule"
      items = PostExamSchedule.with_school(@school).with_type(type).with_limit
    %>
      <% if items.size > 0 %>
        <% items.each do |it| %>
          <div class="studentItem">
            <div class="studentImg"><%= show_image_user_post(it.post.user) %></div>
            <div class="studentInf"><%= link_to truncate_words(it.post.title, 4), post_exam_schedule_path(it) %></div>
          </div>
        <% end %>
        <% if items.size > LIMIT - 1 %>
          <div class="dueDbutton"><%= link_to "View more Exam/Test Schedules", "#{post_exam_schedules_path}?type=#{type}" %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
