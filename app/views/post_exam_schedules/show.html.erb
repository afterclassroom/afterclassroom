<% content_for :you_are_here do -%>
  You are here: <a href="/">Home</a><%= link_to "Student Awareness", post_awarenesses_path(:awareness_type_id => @awareness_type_id), :class => "abLink-detail" %><%= link_to SCHEDULE_TYPE.rassoc(@type_schedule), post_exam_schedules_path, :class => "abLink-detail" %><%= link_to "Detail", "#", :class => "abLink-detail" %>
<% end -%>

<% content_for :post_button do -%>
  <%= render :partial => 'shared/post_button', :locals => {:new_post_path => @new_post_path} %>
<% end -%>

<% content_for :menu_sub do -%>
  <%= render :partial => "submenu" %>
<% end -%>

<!--Content-->
<div class="contDetL">
  <div class="contDetLin">
    <div class="AsDTop">
      <h1 class="titleH1">Exam detail</h1>
      <div class="AsDsearch">
        <%= render :partial => "shared/search_indetail", :locals => {:url_search => post_exam_schedules_path} %>
      </div>
    </div>
    <div class="AsDCont">
    	<%= display_flash_messages_with_raw %>
      <div class="AsDContL">
        <h2 class="titleH2"><%= @post.title %></h2>
        <div class="AsDContLin">in<span><%= link_to "Exam/Test Schedules", post_exam_schedules_path %></span></div>
        <div class="AsDContLdes"><span>Description:</span><%= @post.description %></div>
        <div class="AsDContLinf"><span>Posted by:</span><%= show_user_post(@post.user) %>- <%= time_ago_in_words(@post.created_at, true) + " ago." %></div>
        <div class="AsDContLinf"><span>Teacher name:</span><%= @post_exam_schedule.teacher_name %></div>
        <div class="AsDContLinf"><span>Place:</span><%= @post_exam_schedule.place %></div>
        <div class="AsDContLinf"><span>Starts at:</span><%= @post_exam_schedule.starts_at.strftime("%B %d, %Y") if @post_exam_schedule.starts_at %></div>
        <div class="AsDContLinf"><span>Due date:</span><%= @post_exam_schedule.due_date.strftime("%B %d, %Y") if @post_exam_schedule.due_date %></div>
      </div>
      <%= render :partial => "shared/user_infor", :locals => {:user => @post.user, :post => @post} %>
      <%= render :partial => "post_actions", :locals => {:post => @post} %>
    </div>

    <%= show_post_comments(@post) %>
    <div class="goback" id="go_back"><%= show_go_back %></div>
    <div class="comPage">
      <span class="compre"><img></img><%= link_to "", post_exam_schedule_path(@prev) if @prev %> </span>
      <span class="comnext"><%= link_to "", post_exam_schedule_path(@next) if @next %></span>
    </div>
    <div class="AsDOr">
      <h1 class="titleH1">Related posts</h1>
      <% PostProject.related_posts(@school).each do |p| %>
        <div class="AsDOrItem"><%= link_to p.title, post_exam_schedule_path(p.post_exam_schedule) %></div>
      <% end %>
    </div>
    <div class="goTop"><a href="javascript:;" onclick="goToByScroll('top_page')">Top</a></div>
  </div>
</div>

<div class="contMainR">
  <!--Browser by Subject-->
  <%= render :partial => "shared/browser_by_subject" %>
  <!--Browser by Subject-->

  <!--Ads-->
  <%= render :partial => "ads/show_vertical_ads" %>
  <!--Ads-->
</div>
<!--Content-->

